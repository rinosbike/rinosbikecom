{% schema %}
{
  "name": "Suppliers List",
  "settings": [],
  "presets": [
    {
      "name": "Suppliers List"
    }
  ]
}
{% endschema %}

<div class="supplier-container">
  <input type="text" id="supplierSearch" placeholder="Search Supplier..." onkeyup="filterSuppliers()">

  <div id="supplierList">
    {% for supplier in shop.metaobjects.suppliers.values %}
      <div class="supplier-card" data-name="{{ supplier.name }}">
        <h3>{{ supplier.name }}</h3>
        <p><strong>Contact:</strong> {{ supplier.contact }}</p>
        <p><strong>Address:</strong> {{ supplier.address }}</p>
        <button onclick="showDetails('{{ supplier.name }}')">View More</button>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .supplier-container {
    text-align: center;
    padding: 20px;
  }
  #supplierSearch {
    padding: 10px;
    width: 50%;
    margin-bottom: 20px;
  }
  .supplier-card {
    border: 1px solid #ddd;
    padding: 15px;
    margin: 10px;
    display: inline-block;
    width: 30%;
    box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
  }
</style>