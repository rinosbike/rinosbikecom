<style>
.frame-test{padding:100px 20px;background:#fff;font-family:'Helvetica Neue',sans-serif}
.frame-test-container{max-width:1200px;margin:0 auto}
.frame-test-header{text-align:center;margin-bottom:80px}
.frame-test-title{font-size:3rem;font-weight:300;color:#1d1d1f;margin-bottom:30px;line-height:1.1;letter-spacing:-0.03em}
.frame-test-subtitle{font-size:1.2rem;color:#86868b;max-width:500px;margin:0 auto;line-height:1.4;font-weight:300}
.frame-test-content{display:grid;grid-template-columns:1fr 1fr;gap:80px;align-items:center;margin-bottom:80px}
.frame-test-video-container{position:relative;width:100%;height:400px;background:#000;overflow:hidden}
.frame-test-video{width:100%;height:100%;border:none;object-fit:cover}
.frame-test-info h3{font-size:2rem;font-weight:300;color:#1d1d1f;margin-bottom:30px;line-height:1.2;letter-spacing:-0.02em}
.frame-test-info p{font-size:1.1rem;color:#86868b;line-height:1.6;margin-bottom:40px;font-weight:300}
.frame-test-specs{margin-bottom:50px}
.frame-test-spec{display:flex;justify-content:space-between;align-items:center;padding:20px 0;border-bottom:1px solid #f5f5f7}
.frame-test-spec:last-child{border-bottom:none}
.frame-test-spec:first-child{border-top:1px solid #f5f5f7}
.frame-test-spec-label{font-weight:400;color:#1d1d1f;font-size:1rem}
.frame-test-spec-value{font-weight:300;color:#86868b;font-size:1rem}
.frame-test-cta{display:inline-block;padding:15px 30px;background:#1d1d1f;color:#fff;text-decoration:none;font-weight:400;font-size:1rem;transition:all 0.3s ease;border:1px solid #1d1d1f}
.frame-test-cta:hover{background:transparent;color:#1d1d1f}
.frame-test-stats{display:grid;grid-template-columns:repeat(auto-fit,minmax(250px,1fr));gap:0;margin-top:60px;border-top:1px solid #f5f5f7}
.frame-test-stat{text-align:center;padding:40px 20px;border-right:1px solid #f5f5f7}
.frame-test-stat:last-child{border-right:none}
.frame-test-stat-number{font-size:2.5rem;font-weight:200;color:#1d1d1f;margin-bottom:15px;letter-spacing:-0.02em}
.frame-test-stat-label{font-size:1rem;color:#86868b;font-weight:300}
.frame-test-video-placeholder{width:100%;height:100%;background:#f5f5f7;display:flex;align-items:center;justify-content:center;color:#86868b;font-size:1rem;font-weight:300}
@media (max-width:768px){
.frame-test{padding:80px 20px}
.frame-test-title{font-size:2.5rem}
.frame-test-content{grid-template-columns:1fr;gap:50px}
.frame-test-video-container{height:300px}
.frame-test-stats{grid-template-columns:1fr}
.frame-test-stat{border-right:none;border-bottom:1px solid #f5f5f7;padding:30px 20px}
.frame-test-stat:last-child{border-bottom:none}
}
</style>

<section class="frame-test">
  <div class="frame-test-container">
    <div class="frame-test-header">
      <h2 class="frame-test-title">{{ section.settings.title | default: 'Engineered for Endurance' }}</h2>
      <p class="frame-test-subtitle">{{ section.settings.subtitle | default: 'Every frame undergoes rigorous testing to ensure reliability you can depend on.' }}</p>
    </div>

    <div class="frame-test-content">
      <div class="frame-test-video-container">
        {% if section.settings.vimeo_video_id != blank %}
          <iframe 
            class="frame-test-video"
            src="https://player.vimeo.com/video/{{ section.settings.vimeo_video_id }}?badge=0&autopause=0&autoplay=1&muted=1&loop=1&controls=0&background=1&quality=auto"
            frameborder="0"
            loading="lazy"
            allow="autoplay; fullscreen; picture-in-picture"
            allowfullscreen>
          </iframe>
        {% else %}
          <div class="frame-test-video-placeholder">
            <p>Add Vimeo video ID: 1101897970</p>
          </div>
        {% endif %}
      </div>

      <div class="frame-test-info">
        <h3>{{ section.settings.info_title | default: 'Built Different' }}</h3>
        <p>{{ section.settings.info_description | default: 'Our approach to frame construction prioritizes long-term durability through careful material selection and precise engineering.' }}</p>
        
        <div class="frame-test-specs">
          {% if section.settings.spec_1_label != blank %}
            <div class="frame-test-spec">
              <span class="frame-test-spec-label">{{ section.settings.spec_1_label }}</span>
              <span class="frame-test-spec-value">{{ section.settings.spec_1_value }}</span>
            </div>
          {% endif %}
          {% if section.settings.spec_2_label != blank %}
            <div class="frame-test-spec">
              <span class="frame-test-spec-label">{{ section.settings.spec_2_label }}</span>
              <span class="frame-test-spec-value">{{ section.settings.spec_2_value }}</span>
            </div>
          {% endif %}
          {% if section.settings.spec_3_label != blank %}
            <div class="frame-test-spec">
              <span class="frame-test-spec-label">{{ section.settings.spec_3_label }}</span>
              <span class="frame-test-spec-value">{{ section.settings.spec_3_value }}</span>
            </div>
          {% endif %}
        </div>

        {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
          <a href="{{ section.settings.cta_url }}" class="frame-test-cta">{{ section.settings.cta_text }}</a>
        {% endif %}
      </div>
    </div>

    {% if section.settings.show_stats %}
      <div class="frame-test-stats">
        {% if section.settings.stat_1_number != blank %}
          <div class="frame-test-stat">
            <div class="frame-test-stat-number">{{ section.settings.stat_1_number }}</div>
            <div class="frame-test-stat-label">{{ section.settings.stat_1_label }}</div>
          </div>
        {% endif %}
        {% if section.settings.stat_2_number != blank %}
          <div class="frame-test-stat">
            <div class="frame-test-stat-number">{{ section.settings.stat_2_number }}</div>
            <div class="frame-test-stat-label">{{ section.settings.stat_2_label }}</div>
          </div>
        {% endif %}
        {% if section.settings.stat_3_number != blank %}
          <div class="frame-test-stat">
            <div class="frame-test-stat-number">{{ section.settings.stat_3_number }}</div>
            <div class="frame-test-stat-label">{{ section.settings.stat_3_label }}</div>
          </div>
        {% endif %}
        {% if section.settings.stat_4_number != blank %}
          <div class="frame-test-stat">
            <div class="frame-test-stat-number">{{ section.settings.stat_4_number }}</div>
            <div class="frame-test-stat-label">{{ section.settings.stat_4_label }}</div>
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Frame Test Video",
  "settings": [
    {"type": "text", "id": "title", "label": "Title", "default": "Engineered for Endurance"},
    {"type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Every frame undergoes rigorous testing to ensure reliability you can depend on."},
    {"type": "text", "id": "vimeo_video_id", "label": "Vimeo Video ID", "default": "1101897970"},
    {"type": "text", "id": "info_title", "label": "Info Title", "default": "Built Different"},
    {"type": "textarea", "id": "info_description", "label": "Info Description", "default": "Our approach to frame construction prioritizes long-term durability through careful material selection and precise engineering."},
    {"type": "text", "id": "spec_1_label", "label": "Spec 1 Label", "default": "Material"},
    {"type": "text", "id": "spec_1_value", "label": "Spec 1 Value", "default": "Aluminum Alloy"},
    {"type": "text", "id": "spec_2_label", "label": "Spec 2 Label", "default": "Construction"},
    {"type": "text", "id": "spec_2_value", "label": "Spec 2 Value", "default": "TIG Welded"},
    {"type": "text", "id": "spec_3_label", "label": "Spec 3 Label", "default": "Testing"},
    {"type": "text", "id": "spec_3_value", "label": "Spec 3 Value", "default": "Rigorous Standards"},
    {"type": "text", "id": "cta_text", "label": "Button Text", "default": "Learn More"},
    {"type": "url", "id": "cta_url", "label": "Button URL"},
    {"type": "checkbox", "id": "show_stats", "label": "Show Statistics", "default": true},
    {"type": "text", "id": "stat_1_number", "label": "Stat 1", "default": "2024"},
    {"type": "text", "id": "stat_1_label", "label": "Stat 1 Label", "default": "Est."},
    {"type": "text", "id": "stat_2_number", "label": "Stat 2", "default": "Tested"},
    {"type": "text", "id": "stat_2_label", "label": "Stat 2 Label", "default": "Quality"},
    {"type": "text", "id": "stat_3_number", "label": "Stat 3", "default": "Durable"},
    {"type": "text", "id": "stat_3_label", "label": "Stat 3 Label", "default": "Design"},
    {"type": "text", "id": "stat_4_number", "label": "Stat 4", "default": "Reliable"},
    {"type": "text", "id": "stat_4_label", "label": "Stat 4 Label", "default": "Performance"}
  ],
  "presets": [{"name": "Frame Test Video", "category": "Custom"}]
}
{% endschema %}