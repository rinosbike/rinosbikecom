<section class="iso-test-section">
  <div class="iso-test-container">
    
    <!-- Header -->
    <div class="iso-test-header">
      <div class="iso-test-badge">{{ section.settings.badge_text | default: 'ISO Certified' }}</div>
      <h2 class="iso-test-title">{{ section.settings.title | default: 'Unbreakable Frame Technology' }}</h2>
      <p class="iso-test-subtitle">{{ section.settings.subtitle | default: 'Watch our frame withstand rigorous ISO testing standards, proving the durability and reliability you can trust on every ride.' }}</p>
    </div>

    <!-- Main Content -->
    <div class="iso-test-content">
      
      <!-- Video Container -->
      <div class="iso-test-video-container">
        {% if section.settings.vimeo_video_id != blank %}
          <iframe 
            class="iso-test-video"
            src="https://player.vimeo.com/video/{{ section.settings.vimeo_video_id }}?badge=0&autopause=0&autoplay=1&muted=1&loop=1&controls=0&background=1&quality=auto"
            frameborder="0"
            loading="lazy"
            allow="autoplay; fullscreen; picture-in-picture; clipboard-write; encrypted-media; web-share"
            allowfullscreen
            title="{{ section.settings.video_title | default: 'Frame Test Video' }}">
          </iframe>
        {% else %}
          <div class="iso-test-video-placeholder">
            <div>
              <p>Add your Vimeo video ID in the section settings</p>
              <small>Example: 1101897970</small>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Info Section -->
      <div class="iso-test-info">
        <h3>{{ section.settings.info_title | default: 'Built to Last, Tested to Perfection' }}</h3>
        <p>{{ section.settings.info_description | default: 'Our frames undergo extensive ISO testing to ensure they meet the highest standards of durability, safety, and performance. Every bike is engineered to withstand the toughest conditions.' }}</p>
        
        <!-- Specifications -->
        <div class="iso-test-specs">
          {% if section.settings.spec_1_label != blank %}
            <div class="iso-test-spec">
              <span class="iso-test-spec-label">{{ section.settings.spec_1_label }}</span>
              <span class="iso-test-spec-value">{{ section.settings.spec_1_value }}</span>
            </div>
          {% endif %}
          
          {% if section.settings.spec_2_label != blank %}
            <div class="iso-test-spec">
              <span class="iso-test-spec-label">{{ section.settings.spec_2_label }}</span>
              <span class="iso-test-spec-value">{{ section.settings.spec_2_value }}</span>
            </div>
          {% endif %}
          
          {% if section.settings.spec_3_label != blank %}
            <div class="iso-test-spec">
              <span class="iso-test-spec-label">{{ section.settings.spec_3_label }}</span>
              <span class="iso-test-spec-value">{{ section.settings.spec_3_value }}</span>
            </div>
          {% endif %}
        </div>

        <!-- CTA Button -->
        {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
          <a href="{{ section.settings.cta_url }}" class="iso-test-cta">
            {{ section.settings.cta_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <!-- Stats Section -->
    {% if section.settings.show_stats %}
      <div class="iso-test-stats">
        {% if section.settings.stat_1_number != blank %}
          <div class="iso-test-stat">
            <div class="iso-test-stat-number">{{ section.settings.stat_1_number }}</div>
            <div class="iso-test-stat-label">{{ section.settings.stat_1_label }}</div>
          </div>
        {% endif %}
        
        {% if section.settings.stat_2_number != blank %}
          <div class="iso-test-stat">
            <div class="iso-test-stat-number">{{ section.settings.stat_2_number }}</div>
            <div class="iso-test-stat-label">{{ section.settings.stat_2_label }}</div>
          </div>
        {% endif %}
        
        {% if section.settings.stat_3_number != blank %}
          <div class="iso-test-stat">
            <div class="iso-test-stat-number">{{ section.settings.stat_3_number }}</div>
            <div class="iso-test-stat-label">{{ section.settings.stat_3_label }}</div>
          </div>
        {% endif %}
        
        {% if section.settings.stat_4_number != blank %}
          <div class="iso-test-stat">
            <div class="iso-test-stat-number">{{ section.settings.stat_4_number }}</div>
            <div class="iso-test-stat-label">{{ section.settings.stat_4_label }}</div>
          </div>
        {% endif %}
      </div>
    {% endif %}

  </div>
</section>

<script>
// Intersection Observer for video loading optimization
document.addEventListener('DOMContentLoaded', function() {
  const videoContainers = document.querySelectorAll('.iso-test-video-container');
  
  const observerOptions = {
    root: null,
    rootMargin: '50px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver(function(entries) {
    entries.forEach(function(entry) {
      if (entry.isIntersecting) {
        const iframe = entry.target.querySelector('iframe');
        if (iframe && !iframe.src.includes('autoplay=1')) {
          // Add autoplay if not already present
          iframe.src = iframe.src.replace('autoplay=0', 'autoplay=1');
        }
      }
    });
  }, observerOptions);

  videoContainers.forEach(function(container) {
    observer.observe(container);
  });
});
</script>

