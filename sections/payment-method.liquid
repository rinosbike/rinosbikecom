<script>
document.addEventListener('DOMContentLoaded', function() {

  var locale = {{ localization.language.iso_code | json }};
  var translationsUrl = {{ "translation-payment-method.json" | asset_url | json }};

  fetch(translationsUrl)
    .then(function(r) {
      if (!r.ok) throw new Error('Failed to load translation JSON');
      return r.json();
    })
    .then(function(all) {
      var base = locale.split('-')[0];
      var dict = all[locale] || all[base] || all['en'];
      if (!dict) return;

      document.querySelectorAll('[data-i18n]').forEach(function(el) {
        var key = el.getAttribute('data-i18n');
        if (dict[key]) el.innerHTML = dict[key];
      });
    })
    .catch(function(e) {
      console.warn("payment-method translations failed:", e);
    });

});
</script>



