<script>
// Namespace to avoid conflicts with other Shopify scripts
window.BikeGallery = window.BikeGallery || {};

BikeGallery.switchColor = function(bikeId, imageUrl, clickedSwatch) {
  try {
    // Change the bike image
    const bikeImg = document.getElementById(bikeId);
    if (bikeImg) {
      bikeImg.src = imageUrl;
    }
    
    // Update active color swatch
    const allSwatches = clickedSwatch.parentElement.querySelectorAll('.color-swatch');
    allSwatches.forEach(function(swatch) {
      swatch.classList.remove('active');
    });
    clickedSwatch.classList.add('active');
  } catch (error) {
    console.error('BikeGallery error:', error);
  }
};

// Initialize when DOM is ready
document.addEventListener('DOMContentLoaded', function() {
  console.log('BikeGallery initialized');
  
  // Debug: Check if swatches are present
  const swatches = document.querySelectorAll('.bike-gallery .color-swatch');
  console.log('Found', swatches.length, 'color swatches');
  
  // Add click event listeners as fallback
  swatches.forEach(function(swatch) {
    swatch.addEventListener('click', function() {
      console.log('Swatch clicked:', this.className);
    });
  });
});
</script>

