<script>
function changeColor(imageId, newSrc, clickedSwatch) {
  // Change the image
  const img = document.getElementById(imageId);
  if (img) {
    img.src = newSrc;
  }
  
  // Update active swatch
  const swatches = clickedSwatch.parentNode.querySelectorAll('.color-swatch');
  swatches.forEach(swatch => swatch.classList.remove('active'));
  clickedSwatch.classList.add('active');
}
</script>

