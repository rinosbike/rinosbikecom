<script>
// Gallery functionality
document.addEventListener('DOMContentLoaded', function() {
  // Color switching functionality
  document.querySelectorAll('.color-swatch').forEach(function(swatch) {
    swatch.addEventListener('click', function(e) {
      e.preventDefault();
      
      const imageUrl = this.getAttribute('data-image');
      const targetId = this.getAttribute('data-target');
      const targetImg = document.getElementById(targetId);
      
      if (targetImg && imageUrl) {
        // Immediate image change for better responsiveness
        targetImg.src = imageUrl;
        
        // Update active state
        const container = this.parentElement;
        container.querySelectorAll('.color-swatch').forEach(function(s) {
          s.classList.remove('active');
        });
        this.classList.add('active');
      }
    });
  });
  
  // Handle discover more buttons
  document.querySelectorAll('.discover-button').forEach(function(button) {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      // Add your discover more functionality here
    });
  });
});

// Specifications dropdown toggle
function toggleSpecs(button) {
  const content = button.nextElementSibling;
  const arrow = button.querySelector('.specs-arrow');
  
  // Close all other dropdowns
  document.querySelectorAll('.specs-content').forEach(function(item) {
    if (item !== content) {
      item.classList.remove('active');
      const otherArrow = item.previousElementSibling.querySelector('.specs-arrow');
      if (otherArrow) {
        otherArrow.classList.remove('active');
      }
    }
  });
  
  // Toggle current dropdown
  content.classList.toggle('active');
  arrow.classList.toggle('active');
}
</script>

