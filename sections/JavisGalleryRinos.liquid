<style>
/* Enhanced specificity and !important declarations for Shopify */
.bike-gallery {
  padding: 60px 20px !important;
  background: #ffffff !important;
  font-family: 'IBM Plex Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important;
  position: relative !important;
  z-index: 1 !important;
}

.bike-gallery .gallery-container {
  max-width: 1400px !important;
  margin: 0 auto !important;
}

.bike-gallery .bike-grid {
  display: grid !important;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)) !important;
  gap: 40px !important;
}

.bike-gallery .bike-card {
  background: #fafafa !important;
  overflow: hidden !important;
  transition: transform 0.3s ease !important;
  border-radius: 8px !important;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1) !important;
}

.bike-gallery .bike-card:hover {
  transform: translateY(-4px) !important;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15) !important;
}

.bike-gallery .bike-card.featured {
  background: linear-gradient(135deg, #D3D3D3 0%, #BDBDBD 25%, #9E9E9E 50%, #D3D3D3 75%, #7D7D7D 100%) !important;
  background-size: 400% 400% !important;
  animation: gradientFlow 4s ease-in-out infinite !important;
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.bike-gallery .bike-image-section {
  height: 300px !important;
  background: #ffffff !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  position: relative !important;
  overflow: hidden !important;
}

.bike-gallery .bike-image {
  max-width: 90% !important;
  max-height: 90% !important;
  object-fit: contain !important;
  transition: opacity 0.3s ease !important;
}

/* Specific sizing for Sandman 1, 3, 5 images */
.bike-gallery #bike-1,
.bike-gallery #bike-3,
.bike-gallery #bike-5 {
  max-width: 100% !important;
  max-height: 100% !important;
  transform: scale(1.25) !important;
}

.bike-gallery .bike-info {
  padding: 30px !important;
}

.bike-gallery .bike-name {
  font-size: 1.4rem !important;
  font-weight: 600 !important;
  color: #1d1d1f !important;
  margin-bottom: 10px !important;
  text-transform: uppercase !important;
  letter-spacing: 0.02em !important;
}

.bike-gallery .bike-card.featured .bike-name {
  color: #ffffff !important;
}

.bike-gallery .bike-description {
  font-size: 0.9rem !important;
  color: #86868b !important;
  line-height: 1.4 !important;
  margin-bottom: 20px !important;
}

.bike-gallery .bike-card.featured .bike-description {
  color: rgba(255, 255, 255, 0.9) !important;
}

.bike-gallery .color-options {
  margin-bottom: 20px !important;
}

.bike-gallery .color-label {
  font-size: 0.8rem !important;
  color: #86868b !important;
  font-weight: 500 !important;
  text-transform: uppercase !important;
  letter-spacing: 0.5px !important;
  margin-bottom: 12px !important;
  display: block !important;
}

.bike-gallery .bike-card.featured .color-label {
  color: rgba(255, 255, 255, 0.8) !important;
}

/* Enhanced color swatches with maximum specificity */
.bike-gallery .color-swatches {
  display: flex !important;
  gap: 12px !important;
  flex-wrap: wrap !important;
  margin-top: 8px !important;
  align-items: center !important;
}

.bike-gallery .color-swatch {
  width: 38px !important;
  height: 38px !important;
  border-radius: 50% !important;
  border: 3px solid #e0e0e0 !important;
  cursor: pointer !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  position: relative !important;
  display: inline-block !important;
  flex-shrink: 0 !important;
  box-sizing: border-box !important;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1) !important;
}

.bike-gallery .color-swatch::before {
  content: '' !important;
  position: absolute !important;
  top: -6px !important;
  left: -6px !important;
  right: -6px !important;
  bottom: -6px !important;
  border-radius: 50% !important;
  border: 2px solid transparent !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  opacity: 0 !important;
}

.bike-gallery .color-swatch:hover {
  border-color: #333 !important;
  transform: scale(1.15) !important;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2) !important;
}

.bike-gallery .color-swatch:hover::before {
  border-color: #333 !important;
  opacity: 0.3 !important;
  transform: scale(1.1) !important;
}

.bike-gallery .color-swatch.active {
  border-color: #000 !important;
  transform: scale(1.15) !important;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25) !important;
}

.bike-gallery .color-swatch.active::before {
  border-color: #000 !important;
  opacity: 0.4 !important;
  transform: scale(1.1) !important;
}

/* Color definitions with maximum specificity and enhanced styling */
.bike-gallery .color-swatch.chameleon-gold {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%) !important;
  background-color: #FFD700 !important;
}

.bike-gallery .color-swatch.metal-blue-violet {
