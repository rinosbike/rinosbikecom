    color: rgba(255, 255, 255, 0.8);
  }

  .color-swatches {
    display: flex;
    gap: 12px;
  }

  .color-swatch {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 3px solid #e8e8e8;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .color-swatch:hover {
