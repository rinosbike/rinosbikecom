<style>
  .bike-gallery {
    padding: 80px 20px;
    background: #ffffff;
    font-family: 'IBM Plex Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .gallery-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .gallery-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .gallery-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    color: #1d1d1f;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .gallery-subtitle {
    font-size: 1.2rem;
    color: #86868b;
    font-weight: 400;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.4;
  }

  .bike-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 60px;
    margin-bottom: 80px;
  }

  .bike-card {
    position: relative;
    background: #fafafa;
    transition: all 0.4s ease;
    overflow: hidden;
  }

  .bike-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .bike-card.featured {
    background: linear-gradient(135deg, #D3D3D3 0%, #BDBDBD 25%, #9E9E9E 50%, #D3D3D3 75%, #7D7D7D 100%);
    background-size: 400% 400%;
    animation: gradientFlow 4s ease-in-out infinite;
    color: #ffffff;
  }

  @keyframes gradientFlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .bike-image-container {
    position: relative;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #ffffff;
  }

  .bike-card.featured .bike-image-container {
    background: rgba(255, 255, 255, 0.95);
  }

  .bike-image {
    max-width: 90%;
    max-height: 90%;
    width: auto;
    height: auto;
    object-fit: contain;
    transition: all 0.4s ease;
  }

  .bike-card:hover .bike-image {
    transform: scale(1.05);
  }

  .bike-info {
    padding: 40px 30px;
  }

  .bike-name {
    font-size: 1.6rem;
    font-weight: 600;
    color: #1d1d1f;
    margin-bottom: 12px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .bike-card.featured .bike-name {
    color: #ffffff;
  }

  .bike-description {
    font-size: 1rem;
    color: #86868b;
    line-height: 1.5;
    font-weight: 400;
    margin-bottom: 24px;
  }

  .bike-card.featured .bike-description {
    color: rgba(255, 255, 255, 0.9);
  }

  .bike-specs-dropdown {
    margin-bottom: 24px;
  }

  .specs-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: rgba(0, 0, 0, 0.05);
    padding: 12px 16px;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    width: 100%;
    font-family: inherit;
  }

  .bike-card.featured .specs-toggle {
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
  }

  .specs-toggle:hover {
    background: rgba(0, 0, 0, 0.08);
  }

  .bike-card.featured .specs-toggle:hover {
    background: rgba(255, 255, 255, 0.15);
  }

  .specs-label {
    font-size: 0.85rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #1d1d1f;
  }

  .bike-card.featured .specs-label {
    color: #ffffff;
  }

  .specs-arrow {
    font-size: 0.8rem;
    transition: transform 0.3s ease;
    color: #86868b;
  }

  .bike-card.featured .specs-arrow {
    color: rgba(255, 255, 255, 0.8);
  }

  .specs-arrow.active {
    transform: rotate(180deg);
  }

  .specs-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    background: rgba(0, 0, 0, 0.02);
  }

  .bike-card.featured .specs-content {
    background: rgba(255, 255, 255, 0.05);
  }

  .specs-content.active {
    max-height: 300px;
  }

  .specs-list {
    padding: 16px;
  }

  .spec-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    font-size: 0.85rem;
  }

  .spec-item:last-child {
    border-bottom: none;
  }

  .bike-card.featured .spec-item {
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }

  .spec-label {
    font-weight: 500;
    color: #1d1d1f;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.3px;
  }

  .bike-card.featured .spec-label {
    color: #ffffff;
  }

  .spec-value {
    font-weight: 400;
    color: #86868b;
  }

  .bike-card.featured .spec-value {
    color: rgba(255, 255, 255, 0.9);
  }

  .color-options {
    margin-bottom: 24px;
  }

  .color-label {
    font-size: 0.85rem;
    color: #86868b;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 12px;
