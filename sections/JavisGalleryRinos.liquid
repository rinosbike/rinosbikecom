<style>
.bike-gallery {
  padding: 40px 20px;
  background: #ffffff;
  font-family: 'IBM Plex Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.gallery-container {
  max-width: 1400px;
  margin: 0 auto;
}

.bike-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
  gap: 40px;
}

.bike-card {
  background: #fafafa;
  transition: transform 0.3s ease;
}

.bike-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
}

.bike-card.featured {
  background: linear-gradient(135deg, #D3D3D3 0%, #BDBDBD 25%, #9E9E9E 50%, #D3D3D3 75%, #7D7D7D 100%);
  background-size: 400% 400%;
  animation: gradientFlow 4s ease-in-out infinite;
  color: #ffffff;
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.bike-image-container {
  height: 280px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
}

.bike-image {
  max-width: 85%;
  max-height: 85%;
  object-fit: contain;
}

.bike-info {
  padding: 30px;
}

.bike-name {
  font-size: 1.4rem;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 10px;
  text-transform: uppercase;
}

.bike-card.featured .bike-name {
  color: #ffffff;
}

.bike-description {
  font-size: 0.9rem;
  color: #86868b;
  margin-bottom: 20px;
  line-height: 1.4;
}

.bike-card.featured .bike-description {
  color: rgba(255, 255, 255, 0.9);
}

.specs-section {
  margin-bottom: 20px;
}

.specs-toggle {
  background: rgba(0, 0, 0, 0.05);
  padding: 12px 16px;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: background 0.2s ease;
}

.specs-toggle:hover {
  background: rgba(0, 0, 0, 0.08);
}

.bike-card.featured .specs-toggle {
  background: rgba(255, 255, 255, 0.1);
}

.bike-card.featured .specs-toggle:hover {
  background: rgba(255, 255, 255, 0.15);
}

.specs-label {
  font-size: 0.85rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  color: #1d1d1f;
}

.bike-card.featured .specs-label {
  color: #ffffff;
}

.specs-arrow {
  font-size: 1rem;
  transition: transform 0.3s ease;
  color: #86868b;
}

.bike-card.featured .specs-arrow {
  color: rgba(255, 255, 255, 0.8);
}

.specs-arrow.rotated {
  transform: rotate(180deg);
}

.specs-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  background: rgba(0, 0, 0, 0.02);
}

.bike-card.featured .specs-content {
  background: rgba(255, 255, 255, 0.05);
}

.specs-content.open {
  max-height: 400px;
}

.specs-list {
  padding: 16px;
}

.spec-item {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  font-size: 0.9rem;
}

.spec-item:last-child {
  border-bottom: none;
}

.bike-card.featured .spec-item {
  border-bottom-color: rgba(255, 255, 255, 0.1);
}

.spec-name {
  font-weight: 500;
  color: #1d1d1f;
  text-transform: uppercase;
  font-size: 0.8rem;
  letter-spacing: 0.3px;
}

.bike-card.featured .spec-name {
  color: #ffffff;
}

.spec-detail {
  font-weight: 400;
  color: #86868b;
}

.bike-card.featured .spec-detail {
  color: rgba(255, 255, 255, 0.9);
}

.color-section {
  margin-bottom: 20px;
}

.color-label {
  font-size: 0.8rem;
  color: #86868b;
  font-weight: 500;
  text-transform: uppercase;
  margin-bottom: 10px;
  display: block;
}

.bike-card.featured .color-label {
  color: rgba(255, 255, 255, 0.8);
}

.color-swatches {
  display: flex;
  gap: 12px;
}

.color-swatch {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 2px solid #ddd;
  cursor: pointer;
  transition: all 0.2s ease;
}

.color-swatch:hover {
  border-color: #1d1d1f;
  transform: scale(1.1);
}

.color-swatch.active {
  border-color: #1d1d1f;
  transform: scale(1.1);
  box-shadow: 0 0 0 2px rgba(29, 29, 31, 0.3);
}

.bike-card.featured .color-swatch:hover,
.bike-card.featured .color-swatch.active {
  border-color: #ffffff;
  box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.4);
}

.color-chameleon-gold {
  background-color: #D4AF37;
}

.color-metal-blue-violet {
  background-color: #4B0082;
}

.color-black-forest {
