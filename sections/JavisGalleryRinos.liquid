<script>
function changeColor(imageId, newSrc, clickedSwatch) {
  // Change the image
  const img = document.getElementById(imageId);
  if (img) {
    img.src = newSrc;
  }
  
  // Update active swatch
  const swatches = clickedSwatch.parentNode.querySelectorAll('.color-swatch');
  swatches.forEach(swatch => swatch.classList.remove('active'));
  clickedSwatch.classList.add('active');
}

function toggleSpecs(toggle) {
  const content = toggle.nextElementSibling;
  const arrow = toggle.querySelector('.specs-arrow');
  
  // Close all other dropdowns
  document.querySelectorAll('.specs-content').forEach(function(item) {
    if (item !== content) {
      item.classList.remove('open');
      const otherArrow = item.previousElementSibling.querySelector('.specs-arrow');
      if (otherArrow) {
        otherArrow.classList.remove('rotated');
      }
    }
  });
  
  // Toggle current dropdown
  content.classList.toggle('open');
  arrow.classList.toggle('rotated');
}
</script>

