<style>
.bike-gallery {
  padding: 60px 20px;
  background: #ffffff;
  font-family: 'IBM Plex Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.gallery-container {
  max-width: 1400px;
  margin: 0 auto;
}

.bike-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 40px;
}

.bike-card {
  background: #fafafa;
  overflow: hidden;
  transition: transform 0.3s ease;
}

.bike-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
}

.bike-card.featured {
  background: linear-gradient(135deg, #D3D3D3 0%, #BDBDBD 25%, #9E9E9E 50%, #D3D3D3 75%, #7D7D7D 100%);
  background-size: 400% 400%;
  animation: gradientFlow 4s ease-in-out infinite;
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.bike-image-section {
  height: 300px;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.bike-image {
  max-width: 90%;
  max-height: 90%;
  object-fit: contain;
  transition: opacity 0.3s ease;
}

.bike-info {
  padding: 30px;
}

.bike-name {
  font-size: 1.4rem;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 10px;
  text-transform: uppercase;
  letter-spacing: 0.02em;
}

.bike-card.featured .bike-name {
  color: #ffffff;
}

.bike-description {
  font-size: 0.9rem;
  color: #86868b;
  line-height: 1.4;
  margin-bottom: 20px;
}

.bike-card.featured .bike-description {
  color: rgba(255, 255, 255, 0.9);
}

.color-options {
  margin-bottom: 20px;
}

.color-label {
  font-size: 0.8rem;
  color: #86868b;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-bottom: 12px;
  display: block;
}

.bike-card.featured .color-label {
  color: rgba(255, 255, 255, 0.8);
}

.color-swatches {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
  margin-top: 8px;
}

.color-swatch {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 3px solid #333;
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
  display: block;
}

.color-swatch:hover {
  border-color: #000;
  transform: scale(1.1);
}

.color-swatch.active {
  border-color: #000;
  transform: scale(1.1);
  box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.3);
}

/* Simple solid colors that will definitely show */
.chameleon-gold {
  background: #FFD700 !important;
}

.metal-blue-violet {
  background: #4B0082 !important;
}

.black-forest {
  background: #2C3E50 !important;
}

.ivory-desert {
  background: #F5F5DC !important;
  border-color: #999 !important;
}

.discover-button {
  display: inline-block;
  padding: 12px 24px;
  background-color: #1d1d1f;
  color: #ffffff;
  text-decoration: none;
  font-weight: 500;
  text-transform: uppercase;
  font-size: 0.8rem;
  letter-spacing: 0.5px;
  transition: all 0.3s ease;
  border: 1px solid #1d1d1f;
}

.discover-button:hover {
  background-color: transparent;
  color: #1d1d1f;
}

.bike-card.featured .discover-button {
  background-color: #ffffff;
  color: #1d1d1f;
  border-color: #ffffff;
}

.bike-card.featured .discover-button:hover {
  background-color: transparent;
  color: #ffffff;
  border-color: #ffffff;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .bike-grid {
    grid-template-columns: 1fr;
    gap: 30px;
  }
  
  .bike-image-section {
    height: 250px;
  }
  
  .bike-info {
    padding: 20px;
  }
  
  .bike-name {
    font-size: 1.2rem;
  }
  
  .color-swatch {
    width: 28px;
    height: 28px;
  }
}
</style>

