<style>
  .bike-gallery {
    padding: 40px 20px;
    background: #ffffff;
    font-family: 'IBM Plex Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .gallery-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .bike-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 40px;
  }

  .bike-card {
    background: #fafafa;
    transition: transform 0.3s ease;
  }

  .bike-card:hover {
    transform: translateY(-4px);
  }

  .bike-card.featured {
    background: linear-gradient(135deg, #D3D3D3 0%, #BDBDBD 25%, #9E9E9E 50%, #D3D3D3 75%, #7D7D7D 100%);
    background-size: 400% 400%;
    animation: gradientFlow 4s ease-in-out infinite;
    color: #ffffff;
  }

  @keyframes gradientFlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .bike-image-container {
    height: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ffffff;
  }

  .bike-image {
    max-width: 85%;
    max-height: 85%;
    object-fit: contain;
  }

  .bike-info {
    padding: 30px;
  }

  .bike-name {
    font-size: 1.4rem;
    font-weight: 600;
    color: #1d1d1f;
    margin-bottom: 10px;
    text-transform: uppercase;
  }

  .bike-card.featured .bike-name {
    color: #ffffff;
  }

  .bike-description {
    font-size: 0.9rem;
    color: #86868b;
    margin-bottom: 20px;
    line-height: 1.4;
  }

  .bike-card.featured .bike-description {
    color: rgba(255, 255, 255, 0.9);
  }

  .color-options {
    margin-bottom: 20px;
  }

  .color-label {
    font-size: 0.8rem;
    color: #86868b;
    font-weight: 500;
    text-transform: uppercase;
    margin-bottom: 10px;
    display: block;
  }

  .bike-card.featured .color-label {
    color: rgba(255, 255, 255, 0.8);
  }

  .color-swatches {
    display: flex;
    gap: 10px;
  }

  .color-swatch {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    border: 2px solid #ddd;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .color-swatch:hover,
  .color-swatch.active {
    border-color: #1d1d1f;
    transform: scale(1.1);
  }

  .bike-card.featured .color-swatch:hover,
  .bike-card.featured .color-swatch.active {
    border-color: #ffffff;
  }

  .color-chameleon-gold {
    background: linear-gradient(135deg, #D4AF37, #FFD700);
  }

  .color-metal-blue-violet {
    background: linear-gradient(135deg, #4B0082, #6A5ACD);
  }

  .color-black-forest {
    background: linear-gradient(135deg, #2C3E50, #1C2833);
  }

  .color-ivory-desert {
    background: linear-gradient(135deg, #F5F5DC, #FAEBD7);
  }

  .discover-button {
    display: inline-block;
    padding: 12px 24px;
    background-color: #1d1d1f;
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
    text-transform: uppercase;
    font-size: 0.8rem;
    transition: all 0.3s ease;
  }

  .discover-button:hover {
    background-color: transparent;
    color: #1d1d1f;
    border: 1px solid #1d1d1f;
  }

  .bike-card.featured .discover-button {
    background-color: #ffffff;
    color: #1d1d1f;
  }

  .bike-card.featured .discover-button:hover {
    background-color: transparent;
    color: #ffffff;
    border: 1px solid #ffffff;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .bike-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    .bike-image-container {
      height: 220px;
    }
    
    .bike-info {
      padding: 20px;
    }
  }
</style>

