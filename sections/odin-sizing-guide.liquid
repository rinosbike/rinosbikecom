<style>
.odin-sizing-guide {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  max-width: 100%;
  color: #333;
}

.section-title {
  font-size: 24px;
  font-weight: 600;
  margin-bottom: 30px;
  text-align: center;
  color: #333;
}

/* Size Guide Styles */
.size-section {
  margin-bottom: 50px;
}

.size-grid {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}

.size-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  min-width: 120px;
  text-align: center;
}

.size-label {
  font-size: 32px;
  font-weight: 700;
  color: #333;
  margin-bottom: 8px;
}

.size-range {
  font-size: 16px;
  color: #666;
  font-weight: 500;
}

/* Geometry Styles */
.geometry-section {
  margin-top: 50px;
}

.geometry-diagram {
  text-align: center;
  margin-bottom: 30px;
}

.geometry-image {
  max-width: 100%;
  height: auto;
}

.table-container {
  overflow-x: auto;
  margin-top: 30px;
}

.geometry-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 14px;
  background: white;
}

.geometry-table th,
.geometry-table td {
  padding: 12px;
  text-align: left;
  border: 1px solid #ddd;
}

.geometry-table th {
  background: #f8f9fa;
  font-weight: 600;
  color: #333;
}

.geometry-table th:first-child {
  width: 37%;
}

.height-row td {
  background: #f8f9fa;
}

.remark-row td {
  background: #f8f9fa;
  font-style: italic;
  font-size: 13px;
  color: #666;
  padding: 8px 12px;
  text-align: center;
}

/* Mobile Styles */
@media (max-width: 768px) {
  .size-grid {
    gap: 15px;
  }
  
  .size-option {
    min-width: 100px;
    padding: 15px;
  }
  
  .size-label {
    font-size: 28px;
  }
  
  .geometry-table {
    font-size: 12px;
  }
  
  .geometry-table th,
  .geometry-table td {
    padding: 8px;
  }
}
</style>

{% schema %}
{
  "name": "ODIN Sizing Guide",
  "settings": [
    {
      "type": "text",
      "id": "size_title",
      "label": "Size section title",
      "default": "Choose Your Size"
    },
    {
      "type": "text",
      "id": "geometry_title",
      "label": "Geometry section title",
      "default": "Geometry & Sizing Details"
    },
    {
      "type": "image_picker",
      "id": "geometry_image",
      "label": "Geometry diagram image"
    }
  ],
  "presets": [
    {
      "name": "ODIN Sizing Guide"
    }
  ]
}
{% endschema %}