<style>
/* Modern Redesign Styles */
.odin-sizing-redesign {
  max-width: 1200px;
  margin: 40px auto;
  padding: 0 20px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* Main Size Selector */
.size-selector-section {
  text-align: center;
  margin-bottom: 50px;
}

.main-title {
  font-size: 2em;
  font-weight: 700;
  margin-bottom: 10px;
  color: #000;
}

.size-subtitle {
  font-size: 1.05em;
  color: #666;
  margin-bottom: 40px;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.size-cards {
  display: flex;
  gap: 15px;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 40px;
}

.size-card {
  background: #fff;
  border: 2px solid #e0e0e0;
  border-radius: 12px;
  padding: 30px 20px;
  min-width: 140px;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
}

.size-card:hover {
  border-color: #000;
  transform: translateY(-4px);
  box-shadow: 0 8px 20px rgba(0,0,0,0.1);
}

.size-card-popular {
  border-color: #000;
  background: #fafafa;
}

.popular-badge {
  position: absolute;
  top: -12px;
  left: 50%;
  transform: translateX(-50%);
  background: #000;
  color: #fff;
  font-size: 11px;
  font-weight: 600;
  padding: 4px 12px;
  border-radius: 20px;
  white-space: nowrap;
}

.size-badge {
  font-size: 2.5em;
  font-weight: 700;
  color: #000;
  margin-bottom: 8px;
}

.size-height {
  font-size: 1.1em;
  font-weight: 600;
  color: #333;
  margin-bottom: 4px;
}

.size-height-imperial {
  font-size: 0.9em;
  color: #999;
}

/* Help Banner */
.size-help-banner {
  background: #f8f8f8;
  border-radius: 12px;
  padding: 30px;
  display: flex;
  align-items: center;
  gap: 20px;
  text-align: left;
  max-width: 800px;
  margin: 0 auto;
}

.help-icon {
  width: 48px;
  height: 48px;
  flex-shrink: 0;
  color: #000;
}

.help-text {
  flex: 1;
}

.help-text strong {
  font-size: 1.1em;
  display: block;
  margin-bottom: 5px;
  color: #000;
}

.help-text p {
  margin: 0;
  color: #666;
  font-size: 0.95em;
}

.help-cta {
  background: #000;
  color: #fff;
  padding: 12px 24px;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 600;
  white-space: nowrap;
  transition: opacity 0.2s;
}

.help-cta:hover {
  opacity: 0.85;
}

/* Measurement Guide */
.measure-guide,
.geometry-technical {
  background: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 12px;
  margin: 30px 0;
  overflow: hidden;
}

.measure-summary,
.geometry-summary {
  padding: 20px 30px;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: 600;
  font-size: 1.1em;
  user-select: none;
  transition: background 0.2s;
}

.measure-summary:hover,
.geometry-summary:hover {
  background: #fafafa;
}

.measure-title,
.geometry-title {
  color: #000;
}

.expand-icon {
  font-size: 1.8em;
  font-weight: 300;
  color: #666;
  transition: transform 0.3s;
}

.measure-guide[open] .expand-icon,
.geometry-technical[open] .expand-icon {
  transform: rotate(45deg);
}

.measure-content {
  padding: 0 30px 30px;
}

.measure-steps {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 30px;
  margin-bottom: 30px;
}

.measure-step {
  display: flex;
  gap: 15px;
}

.step-number {
  width: 40px;
  height: 40px;
  background: #000;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 1.2em;
  flex-shrink: 0;
}

.step-content h4 {
  margin: 0 0 8px 0;
  font-size: 1.05em;
  color: #000;
}

.step-content p {
  margin: 0;
  color: #666;
  font-size: 0.95em;
  line-height: 1.5;
}

.measure-note {
  background: #fffbea;
  border-left: 4px solid #f59e0b;
  padding: 15px 20px;
  border-radius: 6px;
  font-size: 0.95em;
  color: #666;
}

.measure-note strong {
  color: #000;
}

/* Geometry Visual */
.geometry-visual-section {
  margin: 50px 0;
  text-align: center;
}

.geometry-visual-title {
  font-size: 1.5em;
  font-weight: 700;
  margin-bottom: 30px;
  color: #000;
}

.geometry-diagram-wrapper {
  max-width: 800px;
  margin: 0 auto;
  background: #fafafa;
  padding: 40px;
  border-radius: 12px;
}

.geometry-diagram-image {
  width: 100%;
  height: auto;
}

/* Technical Geometry Table */
.geometry-table-wrapper {
  padding: 0 30px 30px;
}

.table-scroll {
  overflow-x: auto;
  margin-bottom: 20px;
}

.geometry-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.9em;
}

.geometry-table th,
.geometry-table td {
  padding: 12px 16px;
  text-align: left;
  border-bottom: 1px solid #e0e0e0;
}

.geometry-table th {
  background: #fafafa;
  font-weight: 600;
  color: #000;
  position: sticky;
  top: 0;
}

.measurement-col {
  font-weight: 500;
  color: #000;
  min-width: 180px;
}

.highlight-row {
  background: #f8f8f8;
}

.highlight-row td {
  font-weight: 600;
  color: #000;
}

.geometry-note {
  font-size: 0.85em;
  color: #999;
  text-align: center;
  font-style: italic;
  margin: 0;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .odin-sizing-redesign {
    padding: 0 15px;
    margin: 30px auto;
  }

  .main-title {
    font-size: 1.6em;
  }

  .size-cards {
    gap: 10px;
  }

  .size-card {
    min-width: 110px;
    padding: 20px 15px;
  }

  .size-badge {
    font-size: 2em;
  }

  .size-height {
    font-size: 1em;
  }

  .size-help-banner {
    flex-direction: column;
    text-align: center;
    padding: 25px 20px;
  }

  .help-text {
    text-align: center;
  }

  .help-cta {
    width: 100%;
    text-align: center;
  }

  .measure-steps {
    grid-template-columns: 1fr;
    gap: 25px;
  }

  .measure-summary,
  .geometry-summary {
    padding: 15px 20px;
    font-size: 1em;
  }

  .measure-content,
  .geometry-table-wrapper {
    padding: 0 20px 20px;
  }

  .geometry-diagram-wrapper {
    padding: 20px;
  }

  .geometry-table {
    font-size: 0.8em;
  }

  .geometry-table th,
  .geometry-table td {
    padding: 8px 10px;
  }

  .measurement-col {
    min-width: 140px;
  }
}
</style>

{% schema %}
{
  "name": "ODIN Sizing Guide",
  "settings": [
    {
      "type": "text",
      "id": "size_title",
      "label": "Main title",
      "default": "Find Your Perfect Fit"
    },
    {
      "type": "image_picker",
      "id": "geometry_image",
      "label": "Geometry diagram image"
    },
    {
      "type": "text",
      "id": "contact_url",
      "label": "Contact page URL",
      "default": "/pages/contact",
      "info": "Enter the URL to your contact page (e.g., /pages/contact)"
    }
  ],
  "presets": [
    {
      "name": "ODIN Sizing Guide"
    }
  ]
}
{% endschema %}
