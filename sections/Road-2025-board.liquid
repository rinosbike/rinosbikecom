      },
      {
        "type": "color",
        "id": "accent_color",
        "label": "Accent Color",
        "default": "#F04A00"
      }
    ],
    "presets": [
      {
        "name": "Road Bike Comparison",
        "category": "Product Comparison"
      }
    ],
    "blocks": [],
    "disabled_on": {
      "groups": ["header", "footer"]
    }
  }
  {% endschema %}
