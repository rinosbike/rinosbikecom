  {% schema %}
  {
    "name": "Road Bike Comparison",
    "class": "section-bike-comparison",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading",
        "default": "Road Bikes"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Section Subtitle",
        "default": "Find your perfect ride with our detailed comparison"
      },
      {
        "type": "select",
        "id": "featured_bike",
        "label": "Featured Bike",
        "options": [
