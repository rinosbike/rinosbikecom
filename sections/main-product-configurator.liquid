{{ 'section-product-configurator.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

<script src="{{ 'product-configurator.js' | asset_url }}" defer="defer"></script>

<section class="product-configurator">
  <div class="product-configurator__container">
    
    <div class="product-configurator__media">
      <div class="product-configurator__image-container">
        {%- for media in product.media -%}
          <div 
            class="product-configurator__image{% if forloop.first %} active{% endif %}" 
            data-media-id="{{ media.id }}"
            data-variant-id="{{ media.alt | split: 'variant-' | last }}"
          >
            {%- if media.media_type == 'image' -%}
              <img
                src="{{ media | image_url: width: 800 }}"
                alt="{{ media.alt | escape }}"
                width="{{ media.width }}"
                height="{{ media.height }}"
                loading="lazy"
              >
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
      
      <div class="product-configurator__badges">
        <div class="badge">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M12 2L3 7L12 12L21 7L12 2Z" stroke="currentColor" stroke-width="2"/>
            <path d="M3 17L12 22L21 17" stroke="currentColor" stroke-width="2"/>
            <path d="M3 12L12 17L21 12" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>200+ Service-Standorte</span>
        </div>
        <div class="badge">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2"/>
            <circle cx="12" cy="12" r="9" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>14 Tage Rücknahmegarantie</span>
        </div>
        <div class="badge">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <circle cx="12" cy="12" r="9" stroke="currentColor" stroke-width="2"/>
            <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>2 Jahre Garantie</span>
        </div>
      </div>
    </div>

    <div class="product-configurator__info">
      <product-configurator-info 
        data-section="{{ section.id }}"
        data-product-id="{{ product.id }}"
      >
        
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            
            {%- when 'title' -%}
              <div class="product-configurator__title" {{ block.shopify_attributes }}>
                <h1>{{ product.title | escape }}</h1>
                <button class="product-configurator__change-btn">Ändern</button>
              </div>

            {%- when 'price' -%}
              <div class="product-configurator__pricing" {{ block.shopify_attributes }}>
                <div class="product-configurator__price-display">
                  <span class="product-configurator__total-label">Total</span>
                  <span class="product-configurator__total-price" data-total-price>
                    {{ product.selected_or_first_available_variant.price | money }}
                  </span>
                </div>
                <div class="product-configurator__shipping">
                  <span>Versand</span>
                  <span>Beim Checkout berechnet</span>
                </div>
              </div>

            {%- when 'variant_picker' -%}
              <div class="product-configurator__variants" {{ block.shopify_attributes }}>
                {%- for option in product.options_with_values -%}
                  <div class="product-configurator__option-group">
                    <h3 class="product-configurator__option-title">
                      {{ option.name }}
                      {%- if option.name == 'Color' -%}
                        <span class="product-configurator__selected-option" data-selected-{{ option.name | handleize }}>
                          {{ option.selected_value | default: option.values.first }}
                        </span>
                      {%- endif -%}
                    </h3>
                    
                    {%- if option.name == 'Version' or option.name == 'Model' -%}
                      <div class="product-configurator__version-options">
                        {%- for value in option.values -%}
                          {%- assign variant_for_value = product.variants | where: option.name, value | first -%}
                          <div class="product-configurator__version-option{% if forloop.first %} selected{% endif %}" 
                               data-option-value="{{ value | escape }}"
                               data-option-position="{{ option.position }}"
                               data-variant-price="{{ variant_for_value.price | money }}">
                            <div class="version-option__content">
                              <div class="version-option__header">
                                <span class="version-option__name">{{ value }}</span>
                                {%- if value contains 'Performance' or value contains 'Pro' -%}
                                  <span class="version-option__badge">Beliebt</span>
                                {%- endif -%}
                                <span class="version-option__price">{{ variant_for_value.price | money }}</span>
                              </div>
                              <p class="version-option__description">
                                {%- if value contains 'Basic' -%}
                                  Nur die wichtigste integrierte Technologie enthalten. Nur in Schwarz erhältlich.
                                {%- elsif value contains 'Performance' -%}
                                  Erreiche mehr mit unserer AdaptivePower-Technologie im Motor, kabellosem Handy-Laden im Cockpit und einer LED-Akkuanzeige.
                                {%- endif -%}
                              </p>
                            </div>
                          </div>
                        {%- endfor -%}
                      </div>
                      
                    {%- elsif option.name == 'Color' or option.name == 'Farbe' -%}
                      <div class="product-configurator__color-options">
                        {%- for value in option.values -%}
                          <div class="product-configurator__color-option{% if forloop.first %} selected{% endif %}"
                               data-option-value="{{ value | escape }}"
                               data-option-position="{{ option.position }}"
                               title="{{ value }}">
                            <div class="color-swatch color-swatch--{{ value | handleize }}"
                                 style="background-color: {% if value == 'Black' or value == 'Schwarz' %}#000{% elsif value == 'Sand' %}#D4C5A0{% elsif value == 'White' or value == 'Weiß' %}#fff{% else %}#ccc{% endif %}">
                            </div>
                            {%- if forloop.first -%}
                              <svg class="color-option__check" width="16" height="16" viewBox="0 0 16 16" fill="none">
                                <path d="M13.5 4.5L6 12L2.5 8.5" stroke="currentColor" stroke-width="2"/>
                              </svg>
                            {%- endif -%}
                          </div>
                        {%- endfor -%}
                      </div>
                    {%- endif -%}
                  </div>
                {%- endfor -%}
              </div>

            {%- when 'add_ons' -%}
              <div class="product-configurator__addons" {{ block.shopify_attributes }}>
                <div class="addon-section">
                  <h3>Gepäckträger</h3>
                  <p>Bis zu 27 kg Traglast mit vormontiertem Gepäckträger. Für Taschen, Einkäufe oder Kindersitz.</p>
                  <div class="addon-options">
                    <div class="addon-option selected" data-addon-price="0">
                      <span>Nein danke</span>
                    </div>
                    <div class="addon-option" data-addon-price="99">
                      <span>Vorinstallierter Gepäckträger</span>
                      <span class="addon-price">+ 99 €</span>
                      <span class="addon-badge">Neu</span>
                    </div>
                  </div>
                </div>

                <div class="addon-section">
                  <h3>Quad Lock Telefonhülle</h3>
                  <p>Telefon sicher am Cockpit andocken. Für kabelloses Laden und volle Konnektivität.</p>
                  <div class="addon-options">
                    <div class="addon-option selected" data-addon-price="0">
                      <span>Nein danke</span>
                    </div>
                  </div>
                </div>
              </div>

            {%- when 'buy_buttons' -%}
              <div class="product-configurator__purchase" {{ block.shopify_attributes }}>
                <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" class="product-configurator__form">
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" class="product-variant-id">
                  <input type="hidden" name="quantity" value="1">
                  
                  <button type="submit" class="product-configurator__add-to-cart btn btn--primary btn--full-width">
                    <span>In den Einkaufswagen</span>
                  </button>
                </form>
              </div>

            {%- when 'delivery_info' -%}
              <div class="product-configurator__delivery" {{ block.shopify_attributes }}>
                <div class="delivery-info">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <rect x="2" y="3" width="16" height="14" rx="2" stroke="currentColor" stroke-width="1.5"/>
                    <path d="M8 3V1M12 3V1M2 7H18" stroke="currentColor" stroke-width="1.5"/>
                  </svg>
                  <div>
                    <span class="delivery-info__label">Voraussichtliche Lieferung</span>
                    <span class="delivery-info__date">August 2025</span>
                  </div>
                </div>
                <p class="delivery-info__payment">
                  Bezahle in 3 zinsfreien Teilzahlungen. Mit Käuferschutz* von Klarna
                </p>
              </div>

          {%- endcase -%}
        {%- endfor -%}

      </product-configurator-info>
    </div>
  </div>
</section>

<script type="application/json" data-product-json>
  {{ product | json }}
</script>

{% schema %}
{
  "name": "Product Configurator",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "blocks": [
    {
      "type": "title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "price", 
      "name": "Price",
      "limit": 1
    },
    {
      "type": "variant_picker",
      "name": "Variant picker",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "picker_type",
          "options": [
            {
              "value": "dropdown",
              "label": "Dropdown"
            },
            {
              "value": "button",
              "label": "Buttons"
            }
          ],
          "default": "button",
          "label": "Type"
        }
      ]
    },
    {
      "type": "add_ons",
      "name": "Add-ons",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "addon_products",
          "label": "Add-on product handles (comma separated)"
        }
      ]
    },
    {
      "type": "buy_buttons",
      "name": "Buy buttons",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_dynamic_checkout",
          "default": true,
          "label": "Show dynamic checkout buttons"
        }
      ]
    },
    {
      "type": "delivery_info",
      "name": "Delivery info",
      "limit": 1
    }
  ],
  "settings": [
    {
      "type": "select",
      "id": "media_size",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium", 
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "large",
      "label": "Media size"
    }
  ]
}
{% endschema %} 