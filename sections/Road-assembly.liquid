<details class="assembly-compact">
  <summary class="assembly-summary">
    <div class="assembly-summary-content">
      <div class="assembly-summary-text">
        <span class="assembly-summary-title">{{ t_title }}</span>
        <span class="assembly-summary-desc">{{ t_desc }}</span>
      </div>
      <span class="assembly-expand">+</span>
    </div>
  </summary>
  
  <div class="assembly-content">
    <div class="assembly-video-box" id="video-box-odin" onclick="playVideoOdin()">
      {%- if video_thumbnail -%}
        <img src="{{ video_thumbnail | img_url: '600x' }}" alt="Assembly video" class="assembly-thumb">
      {%- else -%}
        <img src="{{ default_thumbnail }}" alt="Assembly video" class="assembly-thumb">
      {%- endif -%}
      
      <div class="assembly-play-btn">
        <svg width="40" height="40" viewBox="0 0 24 24" fill="#fff">
          <path d="M8 5v14l11-7z"/>
        </svg>
      </div>
    </div>

    <div class="assembly-player" id="player-odin" style="display:none;" data-url="{{ video_url }}"></div>
  </div>
</details>

<style>
.assembly-compact {
  margin: 20px auto;
  max-width: 1200px;
  background: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  overflow: hidden;
}

.assembly-summary {
  padding: 15px 20px;
  cursor: pointer;
  user-select: none;
  list-style: none;
  transition: background 0.2s;
}

.assembly-summary::-webkit-details-marker {
  display: none;
}

.assembly-summary:hover {
  background: #fafafa;
}

.assembly-summary-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 15px;
}

.assembly-summary-text {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.assembly-summary-title {
  font-weight: 600;
  font-size: 1em;
  color: #000;
}

.assembly-summary-desc {
  font-size: 0.9em;
  color: #666;
}

.assembly-expand {
  font-size: 1.8em;
  font-weight: 300;
  color: #666;
  transition: transform 0.3s;
  flex-shrink: 0;
}

.assembly-compact[open] .assembly-expand {
  transform: rotate(45deg);
}

.assembly-content {
  padding: 0 20px 20px;
  border-top: 1px solid #f0f0f0;
}

.assembly-video-box {
  position: relative;
  aspect-ratio: 16 / 9;
  border-radius: 6px;
  overflow: hidden;
  cursor: pointer;
  background: #000;
  margin-top: 15px;
}

.assembly-thumb {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.assembly-play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60px;
  height: 60px;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 4px;
  transition: all 0.3s;
}

.assembly-video-box:hover .assembly-play-btn {
  background: rgba(0, 0, 0, 0.9);
  transform: translate(-50%, -50%) scale(1.1);
}

.assembly-player {
  aspect-ratio: 16 / 9;
  margin-top: 15px;
}

.assembly-player iframe {
  width: 100%;
  height: 100%;
  border: none;
  border-radius: 6px;
}

@media (max-width: 768px) {
  .assembly-summary {
    padding: 12px 15px;
  }

  .assembly-summary-title {
    font-size: 0.95em;
  }

  .assembly-summary-desc {
    font-size: 0.85em;
  }

  .assembly-content {
    padding: 0 15px 15px;
  }

  .assembly-play-btn {
    width: 50px;
    height: 50px;
  }

  .assembly-play-btn svg {
    width: 32px;
    height: 32px;
  }
}
</style>

<script>
function playVideoOdin() {
  const box = document.getElementById('video-box-odin');
  const player = document.getElementById('player-odin');
  
  if (box && player) {
    const url = player.getAttribute('data-url');
    const iframe = document.createElement('iframe');
    iframe.src = url + '?autoplay=1';
    iframe.allow = 'autoplay; fullscreen';
    iframe.allowFullscreen = true;
    
    player.appendChild(iframe);
    box.style.display = 'none';
    player.style.display = 'block';
  }
}
</script>

{%- schema -%}
{
  "name": "Assembly Video Compact",
  "settings": [
    {
      "type": "paragraph",
      "content": "Minimal collapsible video. Auto-translates: EN, ES, DE, FR, PL, BG"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "YouTube Embed URL",
      "default": "https://www.youtube.com/embed/iLWtW4_HscI"
    },
    {
      "type": "image_picker",
      "id": "video_thumbnail",
      "label": "Custom Thumbnail"
    }
  ],
  "presets": [
    {
      "name": "Assembly Video Compact"
    }
  ]
}
{%- endschema -%}
