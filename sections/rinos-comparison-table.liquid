<!-- sections/product-comparison.liquid -->
<style>
  .comparison-section {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
  }

  .comparison-container {
    position: relative;
    max-width: 900px;
    margin: 2em auto;
    overflow: hidden;
    padding: 0 1em;
  }

  /* Fade-in animation */
  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in-section {
    animation: fadeInUp 0.8s ease forwards;
    opacity: 0;
  }

  .comparison-table-box {
    border: 1px solid currentColor;
    border-radius: 6px;
    padding: 1em;
    animation-delay: 0.4s;
    margin-bottom: 2em;
  }

  details {
    cursor: pointer;
  }

  details summary {
    font-size: 1.2em;
    font-weight: 600;
    letter-spacing: 1px;
    padding: 0.5em 0;
    list-style: none;
    user-select: none;
  }

  details summary::-webkit-details-marker {
    display: none;
  }

  details summary::before {
    content: 'â–¼';
    display: inline-block;
    margin-right: 0.5em;
    transition: transform 0.3s ease;
  }

  details[open] summary::before {
    transform: rotate(180deg);
  }

  details summary:hover {
    opacity: 0.8;
  }

  .comparison-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.95em;
    border: 1px solid currentColor;
    margin-top: 1em;
  }

  .comparison-table td {
    border: 1px solid currentColor;
    padding: 0.5em;
  }

  .comparison-table td:first-child {
    font-weight: 600;
    background: rgba(0, 0, 0, 0.02);
  }

  .featured-column {
    background: rgba(0, 0, 0, 0.05);
    font-weight: 500;
  }

  /* Mobile view */
  @media (max-width: 768px) {
    .comparison-table {
      font-size: 0.85em;
    }
    
    .comparison-table td {
      padding: 0.4em;
      font-size: 0.9em;
    }
  }
</style>

