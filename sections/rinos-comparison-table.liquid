{% comment %}
  Premium Gravel Bike Comparison Table
  Minimalistic design with featured product highlighting
{% endcomment %}

<style>
  .gravel-comparison {
    padding: 60px 20px;
    background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .gravel-comparison-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .gravel-comparison-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .gravel-comparison-title {
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    font-weight: 300;
    color: #1a1a1a;
    margin-bottom: 16px;
    letter-spacing: -0.02em;
    text-transform: uppercase;
  }

  .gravel-comparison-subtitle {
    font-size: 1.1rem;
    color: #666;
    font-weight: 400;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.5;
  }

  .comparison-wrapper {
    overflow-x: auto;
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    background: white;
  }

  .comparison-table {
    width: 100%;
    border-collapse: collapse;
    min-width: 1200px;
  }

  .bike-header {
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border-bottom: 1px solid #e9ecef;
  }

  .bike-header th {
    padding: 40px 20px;
    text-align: center;
    border-right: 1px solid #f0f0f0;
    position: relative;
  }

  .bike-header th:last-child {
    border-right: none;
  }

  .bike-header th:first-child {
    background: transparent;
    border-right: 1px solid #e9ecef;
  }

  .featured-bike {
    background: linear-gradient(135deg, #F04A00 0%, #e63900 100%);
    color: white;
    position: relative;
    overflow: hidden;
  }

  .featured-bike::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, rgba(255,255,255,0.3), rgba(255,255,255,0.8), rgba(255,255,255,0.3));
  }

  .featured-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .bike-image {
    width: 160px;
    height: 120px;
    object-fit: contain;
    margin-bottom: 20px;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
  }

  .bike-name {
    font-size: 1.4rem;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: -0.01em;
  }

  .featured-bike .bike-name {
    color: white;
  }

  .bike-description {
    font-size: 0.9rem;
    color: #666;
    line-height: 1.4;
    font-weight: 400;
  }

  .featured-bike .bike-description {
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
  }

  .spec-row {
    border-bottom: 1px solid #f8f9fa;
    transition: background-color 0.2s ease;
  }

  .spec-row:hover {
    background: #fafbfc;
  }

  .spec-row:last-child {
    border-bottom: none;
  }

  .spec-label {
    padding: 24px 30px;
    font-weight: 600;
    color: #1a1a1a;
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    border-right: 1px solid #e9ecef;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    width: 180px;
  }

  .spec-value {
    padding: 24px 20px;
    color: #495057;
    font-weight: 500;
    border-right: 1px solid #f0f0f0;
    font-size: 0.95rem;
    text-align: center;
    position: relative;
  }

  .spec-value:last-child {
    border-right: none;
  }

  .featured-spec {
    background: linear-gradient(135deg, rgba(240, 74, 0, 0.05) 0%, rgba(240, 74, 0, 0.1) 100%);
    color: #F04A00;
    font-weight: 600;
    border-left: 3px solid #F04A00;
    border-right: 3px solid #F04A00;
  }

  .featured-spec:last-child {
    border-right: 3px solid #F04A00;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .gravel-comparison {
      padding: 40px 15px;
    }

    .gravel-comparison-title {
      font-size: 2rem;
    }

    .gravel-comparison-subtitle {
      font-size: 1rem;
    }

    .comparison-wrapper {
      border-radius: 15px;
      margin: 0 -15px;
    }

    .comparison-table {
      min-width: 900px;
    }

    .bike-header th {
      padding: 25px 15px;
    }

    .bike-image {
      width: 120px;
      height: 90px;
    }

    .bike-name {
      font-size: 1.1rem;
    }

    .bike-description {
      font-size: 0.8rem;
    }

    .spec-label {
      padding: 18px 20px;
      font-size: 0.8rem;
    }

    .spec-value {
      padding: 18px 15px;
      font-size: 0.85rem;
    }
  }

  /* Tablet */
  @media (max-width: 1024px) and (min-width: 769px) {
    .comparison-table {
      min-width: 1000px;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .spec-row {
      transition: none;
    }
  }
</style>

