<script>
// Modal Functions
function openKlarnaModal() {
  document.getElementById('klarnaModal').classList.add('active');
  document.body.style.overflow = 'hidden';
}

function closeKlarnaModal(event) {
  if (!event || event.target.id === 'klarnaModal') {
    document.getElementById('klarnaModal').classList.remove('active');
    document.body.style.overflow = '';
  }
}

// Close modal with ESC key
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    closeKlarnaModal();
  }
});
</script>

