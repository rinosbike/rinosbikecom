<style>
  /* Banner Styles */
  .klarna-banner-wrapper {
    margin: 2rem auto;
    max-width: 1200px;
    padding: 0 1rem;
  }
  
  .klarna-banner-main {
    position: relative;
    background: linear-gradient(135deg, #FFB3C7 0%, #FF9DB8 50%, #FFB3C7 100%);
    border-radius: 20px;
    padding: 1.5rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    box-shadow: 
      0 1px 3px rgba(255, 179, 199, 0.3),
      0 8px 24px rgba(255, 179, 199, 0.25);
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .klarna-banner-main:hover {
    transform: translateY(-2px);
    box-shadow: 
      0 2px 6px rgba(255, 179, 199, 0.35),
      0 12px 32px rgba(255, 179, 199, 0.3);
  }
  
  .klarna-banner-main::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #fff 0%, rgba(255,255,255,0.5) 50%, #fff 100%);
    opacity: 0.6;
  }
  
  .klarna-banner-pattern {
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 15% 20%, rgba(255,255,255,0.15) 0%, transparent 50%),
      radial-gradient(circle at 85% 80%, rgba(255,255,255,0.1) 0%, transparent 50%);
    pointer-events: none;
  }
  
  .klarna-banner-left {
    flex: 1;
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }
  
  .klarna-banner-logo {
    background: white;
    padding: 0.625rem 1rem;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    flex-shrink: 0;
  }
  
  .klarna-banner-logo img {
    max-width: 90px;
    display: block;
  }
  
  .klarna-banner-text {
    color: white;
  }
  
  .klarna-banner-title {
    font-size: 1.25rem;
    font-weight: 800;
    margin: 0 0 0.25rem;
    color: white;
    letter-spacing: -0.02em;
    line-height: 1.2;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }
  
  .klarna-banner-subtitle {
    font-size: 0.9375rem;
    color: rgba(255,255,255,0.95);
    margin: 0;
    line-height: 1.4;
  }
  
  .klarna-banner-right {
    position: relative;
    z-index: 1;
  }
  
  .klarna-banner-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.75rem 1.75rem;
    background: white;
    color: #FF9DB8;
    border: none;
    border-radius: 12px;
    font-size: 0.9375rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    white-space: nowrap;
  }
  
  .klarna-banner-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.2);
  }
  
  .klarna-banner-cta svg {
    transition: transform 0.2s ease;
  }
  
  .klarna-banner-cta:hover svg {
    transform: translateX(3px);
  }
  
  /* Modal Styles */
  .klarna-modal {
    display: none;
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    animation: fadeIn 0.3s ease;
  }
  
  .klarna-modal.active {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }
  
  .klarna-modal-content {
    background: white;
    border-radius: 24px;
    max-width: 600px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 24px 80px rgba(0,0,0,0.3);
    animation: slideUp 0.4s ease;
    position: relative;
  }
  
  .klarna-modal-header {
    position: sticky;
    top: 0;
    background: linear-gradient(135deg, #FFB3C7 0%, #FF9DB8 100%);
    padding: 2rem 2rem 1.5rem;
    border-radius: 24px 24px 0 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 10;
  }
  
  .klarna-modal-logo img {
    max-width: 140px;
    filter: brightness(0) invert(1);
  }
  
  .klarna-modal-close {
    background: rgba(255,255,255,0.2);
    border: none;
    border-radius: 10px;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .klarna-modal-close:hover {
    background: rgba(255,255,255,0.3);
    transform: rotate(90deg);
  }
  
  .klarna-modal-close svg {
    stroke: white;
  }
  
  .klarna-modal-body {
    padding: 2rem 2rem 2.5rem;
  }
  
  .klarna-modal-title {
    font-size: 1.5rem;
    font-weight: 800;
    margin: 0 0 1.5rem;
    color: #0a0a0a;
    text-align: center;
  }
  
  /* Payment Options */
  .klarna-payment-options {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .klarna-option {
    background: #fafafa;
    border-radius: 16px;
    padding: 1.5rem;
    border: 1.5px solid #e5e5e5;
    transition: all 0.25s ease;
  }
  
  .klarna-option:hover {
    border-color: #FFB3C7;
    box-shadow: 0 4px 16px rgba(255, 179, 199, 0.2);
  }
  
  .klarna-option-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }
  
  .klarna-option-icon {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
  }
  
  .klarna-option-title {
    font-size: 1.125rem;
    font-weight: 700;
    margin: 0;
    color: #0a0a0a;
  }
  
  .klarna-option-desc {
    font-size: 0.875rem;
    color: #525252;
    margin: 0;
    line-height: 1.5;
  }
  
  /* How it Works */
  .klarna-how-it-works {
    margin-bottom: 2rem;
  }
  
  .klarna-how-it-works-title {
    font-size: 1.25rem;
    font-weight: 800;
    margin: 0 0 1.5rem;
    color: #0a0a0a;
    text-align: center;
  }
  
  .klarna-steps {
    background: #fafafa;
    border-radius: 16px;
    padding: 1.5rem;
    position: relative;
  }
  
  .klarna-step {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    position: relative;
    padding-left: 0;
    margin-bottom: 1.5rem;
  }
  
  .klarna-step:last-child {
    margin-bottom: 0;
  }
  
  .klarna-step:not(:last-child)::after {
    content: '';
    position: absolute;
    left: 5.5px;
    top: 24px;
    width: 2px;
    height: calc(100% + 1.5rem);
    background: #e5e5e5;
  }
  
  .klarna-step-number {
    width: 12px;
    height: 12px;
    background: #0a0a0a;
    border-radius: 50%;
    flex-shrink: 0;
    margin-top: 6px;
    position: relative;
    z-index: 1;
  }
  
  .klarna-step-content {
    flex: 1;
  }
  
  .klarna-step-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.25rem;
    color: #0a0a0a;
  }
  
  .klarna-step-desc {
    font-size: 0.8125rem;
    color: #737373;
    margin: 0;
    line-height: 1.5;
  }
  
  /* Disclaimer */
  .klarna-disclaimer {
    background: #fff9e6;
    border-left: 3px solid #FFB3C7;
    border-radius: 8px;
    padding: 1rem 1.25rem;
    font-size: 0.8125rem;
    color: #525252;
    line-height: 1.6;
    margin-bottom: 2rem;
  }
  
  .klarna-disclaimer a {
    color: #0a0a0a;
    font-weight: 600;
    text-decoration: underline;
  }
  
  /* CTA Section */
  .klarna-cta-section {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e5e5;
  }
  
  .klarna-cta-title {
    font-size: 1rem;
    font-weight: 700;
    margin: 0 0 1rem;
    color: #0a0a0a;
  }
  
  .klarna-cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.875rem 2rem;
    background: linear-gradient(135deg, #FFB3C7 0%, #FF9DB8 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 4px 16px rgba(255, 179, 199, 0.3);
  }
  
  .klarna-cta-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 179, 199, 0.4);
  }
  
  .klarna-cta-text {
    font-size: 0.8125rem;
    color: #737373;
    margin-top: 0.875rem;
  }
  
  /* Close Button Bottom */
  .klarna-close-bottom {
    width: 100%;
    padding: 0.875rem;
    background: #f5f5f5;
    color: #0a0a0a;
    border: none;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.2s ease;
    margin-top: 1.5rem;
  }
  
  .klarna-close-bottom:hover {
    background: #e5e5e5;
  }
  
  /* Animations */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .klarna-banner-main {
      flex-direction: column;
      padding: 1.5rem;
      text-align: center;
    }
    
    .klarna-banner-left {
      flex-direction: column;
    }
    
    .klarna-banner-title {
      font-size: 1.125rem;
    }
    
    .klarna-banner-subtitle {
      font-size: 0.875rem;
    }
    
    .klarna-banner-cta {
      width: 100%;
      justify-content: center;
    }
    
    .klarna-modal-header {
      padding: 1.5rem;
    }
    
    .klarna-modal-body {
      padding: 1.5rem;
    }
    
    .klarna-modal-title {
      font-size: 1.25rem;
    }
  }
</style>

