<style>

.geometry-chart__image {
  text-align: center;
  margin: 1.5em 0;
  background: rgba(0,0,0,0.02);
  padding: 1.5em 1em;
  border-radius: 4px;
}

.geometry-chart__image img {
  max-width: 100%;
  height: auto;
  max-height: 350px;
  object-fit: contain;
}

.geometry-chart__placeholder {
  padding: 2em;
  background: rgba(0,0,0,0.05);
  border: 2px dashed currentColor;
  border-radius: 4px;
  opacity: 0.6;
  font-size: 0.9em;
}

.geometry-chart__table-wrapper {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  margin: 1em 0;
}

.geometry-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.85em;
  min-width: 700px;
}

.geometry-table thead th {
  background: rgba(0,0,0,0.08);
  font-weight: 600;
  padding: 0.6em 0.4em;
  border: 1px solid currentColor;
  font-size: 0.9em;
  letter-spacing: 0.5px;
}

.geometry-table tbody th {
  background: rgba(0,0,0,0.05);
  font-weight: 600;
  padding: 0.6em 0.8em;
  border: 1px solid currentColor;
}

.geometry-table td {
  padding: 0.6em 0.4em;
  text-align: center;
  border: 1px solid currentColor;
}

.geometry-table tbody tr:hover {
  background: rgba(0,0,0,0.03);
}

.geometry-chart__note {
  margin: 1em 0 0 0;
  font-size: 0.85em;
  opacity: 0.7;
  font-style: italic;
  text-align: center;
}

@media (max-width: 768px) {
  .geometry-chart__image {
    padding: 1em 0.5em;
  }
  
  .geometry-table {
    font-size: 0.75em;
    min-width: 600px;
  }
  
  .geometry-table th,
  .geometry-table td {
    padding: 0.5em 0.3em;
  }
}
</style>

{% schema %}
{
  "name": "Frame Geometry",
  "settings": [
    {
      "type": "image_picker",
      "id": "geometry_image",
      "label": "Geometry Diagram Image"
    }
  ],
  "presets": [
    {
      "name": "Frame Geometry"
    }
  ]
}
{% endschema %}