                  {{ section.settings.gears_label }}
                {% endif %}
              </td>
              {% for block in section.blocks %}
                {% if block.type == 'bike' %}
                  <td class="section-11-td {% if block.settings.highlight_bike %}specific-column{% endif %}">
                    {% if block.settings.use_translation and block.settings.gears_translation_key != blank %}
                      {{ block.settings.gears_translation_key | t }}
                    {% else %}
                      {{ block.settings.bike_gears }}
