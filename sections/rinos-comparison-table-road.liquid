                  {{ section.settings.gear_label }}
                {% endif %}
              </td>
              {% for block in section.blocks %}
                {% if block.type == 'bike' %}
                  <td class="section-11-td {% if block.settings.highlight_bike %}specific-column{% endif %}">
                    {% if block.settings.use_translation and block.settings.gear_translation_key != blank %}
                      {{ block.settings.gear_translation_key | t }}
                    {% else %}
                      {{ block.settings.bike_gear }}
                    {% endif %}
                  </td>
                {% endif %}
              {% endfor %}
            </tr>
            {% endif %}
            
            <!-- Gears Row -->
            {% if section.settings.show_gears %}
