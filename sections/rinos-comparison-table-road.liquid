  <script>
    // Add class when table is scrolled (for sticky header shadow)
    const tableWrapper = document.querySelector('.table-wrapper');
    if (tableWrapper) {
      tableWrapper.addEventListener('scroll', function() {
        if (this.scrollTop > 0) {
          this.classList.add('table-scrolled');
        } else {
          this.classList.remove('table-scrolled');
        }
      });
    }

    // Mobile: Auto-hide scroll hint after first scroll
    let hasScrolled = false;
    const scrollHint = document.querySelector('.scroll-hint');
    
    if (scrollHint && tableWrapper) {
      tableWrapper.addEventListener('scroll', function() {
        if (!hasScrolled && this.scrollLeft > 10) {
          hasScrolled = true;
          scrollHint.style.opacity = '0';
          setTimeout(() => {
            scrollHint.style.display = 'none';
          }, 300);
        }
      });
    }

    // Improve keyboard navigation for table
    document.querySelector('.comparison-table')?.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowRight' || e.key === 'ArrowLeft') {
        e.preventDefault();
        const scrollAmount = e.key === 'ArrowRight' ? 200 : -200;
        tableWrapper.scrollLeft += scrollAmount;
      }
    });

    // Lazy load images
    if ('IntersectionObserver' in window) {
      const imageObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const img = entry.target;
            img.classList.remove('loading');
            observer.unobserve(img);
          }
        });
      });

      document.querySelectorAll('.bike-image').forEach(img => {
        img.classList.add('loading');
        imageObserver.observe(img);
      });
    }
  </script>

