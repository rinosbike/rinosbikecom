<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Document</title>
  <style>
    .section-11{
      padding-right: 25px;
      padding-left: 25px;
    }
    .section-11-table {
      width: 100%;
      border-collapse: collapse;
      font-family: sans-serif;
    }
    .section-11-th, .section-11-td {
      padding: 15px 30px;
      text-align: left;
      border-bottom: 1px solid #4b4b4b;
    }
    .section-11-td-2{
      padding: 15px 30px;
      text-align: left;
      border-bottom: 2px solid #F04A00;
    }
    .section-11-th {
      border-bottom: 1px solid #4b4b4b;
      align-items: center;
      padding-top: 20px;
      padding-bottom: 20px;
    }
    .specific-column{
      border-right: 2px solid #F04A00;
      border-left: 2px solid #F04A00;
    }
    .specific-column-top {
      border-top: 2px solid #F04A00;
    }
    .section-11-td {
      color: #4b4b4b;
    }
    .section-11-td-1 {
      padding: 1px;
      text-align: left;
      border-bottom: 1px solid #4b4b4b;
      color: #4b4b4b;
    }
    .section-11-img {
      max-width: 175px;
    }
    .section-11-img-1 {
      max-width: 159px;
    }
    .section-11 {
      margin-top: 15px;
    }
    .section-11-container {
      max-width: 1500px;
      margin: auto;
    }
    .section-11-text {
      font-size: 15px;
      line-height: 99%;
      font-weight: 500;
      color: black;
    }
    .section-4-h1{
      text-transform: uppercase;
      font-weight: 600;
      font-size: 23px;
      line-height: 92%;
      color: black;
    }
    .highlighted-title {
      color: #F04A00 !important;
    }
    @media (max-width: 768px) {
      .section-11-th, .section-11-td {
        padding: 10px 12px;
        font-size: 13px;
      }
      .section-11-img {
        max-width: 120px;
      }
      .section-11-img-1 {
        max-width: 114px;
      }
      .section-11-text {
        font-size: 11px;
        line-height: 100%;
      }
      .section-4-h1{
        font-size: 15px;
        line-height: 100%;
      }
      .section-11-td-1, .section-11-td {
        font-size: 13px;
      }
    }
    .scrollable-table-wrapper {
      overflow-x: auto;
      width: 100%;
    }
  </style>
</head>
<body>
  <section class="section-11">
    <div class="section-11-container">
      <div class="scrollable-table-wrapper">
        <table class="section-11-table">
          <thead class="section-11-thead">
            <tr class="section-11-tr">
              <th colspan="{{ section.blocks.size | plus: 1 }}">
                <h1 style="color: {{ section.settings.title_color }}; font-size: {{ section.settings.title_size }}px;">
                  {% if section.settings.use_translation_key and section.settings.title_translation_key != blank %}
                    {{ section.settings.title_translation_key | t }}
                  {% else %}
                    {{ section.settings.table_title }}
                  {% endif %}
                </h1>
              </th>
            </tr>
            <tr class="section-11-tr">
              <th class="section-11-th"></th>
              {% for block in section.blocks %}
                {% if block.type == 'bike' %}
                  <th class="section-11-th {% if block.settings.highlight_bike %}specific-column specific-column-top{% endif %}">
                    {% if block.settings.bike_image != blank %}
                      <img class="section-11-img" src="{{ block.settings.bike_image | img_url: 'master' }}" alt="{{ block.settings.bike_name }}">
                    {% endif %}
                    <div class="section-4-h1 {% if block.settings.highlight_bike %}highlighted-title{% endif %}">
                      {% if block.settings.use_translation and block.settings.name_translation_key != blank %}
                        {{ block.settings.name_translation_key | t }}
                      {% else %}
                        {{ block.settings.bike_name }}
                      {% endif %}
                    </div>
                  </th>
                {% endif %}
              {% endfor %}
            </tr>
          </thead>
          <tbody class="section-11-tbody">
            <!-- Weight Row -->
            {% if section.settings.show_weight %}
            <tr class="section-11-tr">
              <td class="section-11-td-1">
                {% if section.settings.use_translation_key %}
                  {{ 'bikes.weight_label' | t | default: section.settings.weight_label }}
                {% else %}
                  {{ section.settings.weight_label }}
                {% endif %}
              </td>
              {% for block in section.blocks %}
                {% if block.type == 'bike' %}
                  <td class="section-11-td {% if block.settings.highlight_bike %}specific-column{% endif %}">
                    {% if block.settings.use_translation and block.settings.weight_translation_key != blank %}
                      {{ block.settings.weight_translation_key | t }}
                    {% else %}
                      {{ block.settings.bike_weight }}
                    {% endif %}
                  </td>
                {% endif %}
              {% endfor %}
            </tr>
            {% endif %}
            
            <!-- Gear Row -->
            {% if section.settings.show_gear %}
            <tr class="section-11-tr">
              <td class="section-11-td-1">
                {% if section.settings.use_translation_key %}
                  {{ 'bikes.gear_label' | t | default: section.settings.gear_label }}
