                {% endif %}
              {% endfor %}
            </tr>
            {% endif %}
            
            <!-- Custom Field 1 -->
            {% if section.settings.show_custom_1 and section.settings.custom_1_label != blank %}
            <tr class="section-11-tr">
              <td class="section-11-td-1">{{ section.settings.custom_1_label }}</td>
              {% for block in section.blocks %}
                {% if block.type == 'bike' %}
                  <td class="section-11-td {% if block.settings.highlight_bike %}specific-column{% endif %}">
                    {{ block.settings.bike_custom_1 }}
