                  {{ 'bikes.wheelSize_label' | t | default: section.settings.wheel_size_label }}
                {% else %}
                  {{ section.settings.wheel_size_label }}
                {% endif %}
              </td>
              {% for block in section.blocks %}
                {% if block.type == 'bike' %}
                  <td class="section-11-td {% if block.settings.highlight_bike %}specific-column{% endif %}">
                    {% if block.settings.use_translation and block.settings.wheel_size_translation_key != blank %}
                      {{ block.settings.wheel_size_translation_key | t }}
                    {% else %}
                      {{ block.settings.bike_wheel_size }}
                    {% endif %}
                  </td>
                {% endif %}
              {% endfor %}
            </tr>
