                {% if section.settings.use_translation_key %}
                  {{ 'bikes.brakes_label' | t | default: section.settings.brakes_label }}
                {% else %}
                  {{ section.settings.brakes_label }}
                {% endif %}
              </td>
              {% for block in section.blocks %}
                {% if block.type == 'bike' %}
                  <td class="section-11-td {% if block.settings.highlight_bike %}specific-column{% endif %}">
                    {% if block.settings.use_translation and block.settings.brakes_translation_key != blank %}
                      {{ block.settings.brakes_translation_key | t }}
                    {% else %}
