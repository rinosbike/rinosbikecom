<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: #ffffff;
      color: #000000;
      line-height: 1.6;
    }

    .comparison-wrapper {
      max-width: 1400px;
      margin: 0 auto;
      padding: 40px 20px;
    }

    /* Header */
    .comparison-header {
      text-align: center;
      margin-bottom: 60px;
      padding-bottom: 30px;
      border-bottom: 1px solid #e5e5e5;
    }

    .main-title {
      font-size: 42px;
      font-weight: 300;
      letter-spacing: -1px;
      color: #000000;
      margin-bottom: 10px;
      text-transform: uppercase;
    }

    .subtitle {
      font-size: 14px;
      color: #6b6b6b;
      font-weight: 400;
      letter-spacing: 1px;
    }

    /* Bikes Grid */
    .bikes-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 30px;
      margin-bottom: 40px;
    }

    /* Bike Card */
    .bike-card {
      background: #ffffff;
      border: 1px solid #e5e5e5;
      border-radius: 0;
      padding: 30px 20px;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      cursor: pointer;
    }

    .bike-card:hover {
      border-color: #000000;
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    /* Featured Card */
    .bike-card.is-featured {
      border: 2px solid #F04A00;
      background: #ffffff;
    }

    .bike-card.is-featured::before {
      content: "RECOMMENDED";
      position: absolute;
      top: -12px;
      left: 50%;
      transform: translateX(-50%);
      background: #F04A00;
      color: white;
      padding: 4px 16px;
      font-size: 10px;
      font-weight: 600;
      letter-spacing: 1.5px;
    }

    .bike-card.is-featured:hover {
      border-color: #F04A00;
      box-shadow: 0 10px 40px rgba(240, 74, 0, 0.15);
    }

    /* Bike Image */
    .bike-image-container {
      height: 140px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 20px;
      position: relative;
      overflow: hidden;
    }

    .bike-image {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      filter: contrast(1.05);
      transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .bike-card:hover .bike-image {
      transform: scale(1.08);
    }

    /* Bike Name */
    .bike-model-name {
      font-size: 18px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      text-align: center;
      margin-bottom: 25px;
      padding-bottom: 15px;
      border-bottom: 1px solid #e5e5e5;
      color: #000000;
    }

    .bike-card.is-featured .bike-model-name {
      color: #F04A00;
    }

    /* Specs Table */
    .bike-specs {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .spec-row {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      padding: 8px 0;
      border-bottom: 1px solid #f5f5f5;
      transition: all 0.2s ease;
    }

    .spec-row:last-child {
      border-bottom: none;
    }

    .spec-row:hover {
      padding-left: 5px;
      background: #fafafa;
      margin: 0 -5px;
      padding-right: 5px;
    }

    .spec-label {
      font-size: 11px;
      font-weight: 500;
      color: #8b8b8b;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      flex-shrink: 0;
    }

    .spec-value {
      font-size: 13px;
      font-weight: 500;
      color: #2b2b2b;
      text-align: right;
      margin-left: 10px;
    }

    /* Highlight key specs */
    .spec-row.key-spec .spec-value {
      font-weight: 600;
      color: #000000;
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
      .bikes-container {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
      }
    }

    @media (max-width: 768px) {
      .comparison-wrapper {
        padding: 20px 15px;
      }

      .main-title {
        font-size: 32px;
      }

      .bikes-container {
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 15px;
      }

      .bike-card {
        padding: 20px 15px;
      }

      .bike-image-container {
        height: 100px;
      }

      .bike-model-name {
        font-size: 14px;
        margin-bottom: 20px;
      }

      .spec-label {
        font-size: 10px;
      }

      .spec-value {
        font-size: 12px;
      }
    }

    @media (max-width: 480px) {
      .bikes-container {
        grid-template-columns: 1fr;
      }
    }

    /* Comparison Table View Toggle */
    .view-controls {
      text-align: center;
      margin-bottom: 30px;
    }

    .view-toggle {
      display: inline-flex;
      background: #f5f5f5;
      border-radius: 0;
      overflow: hidden;
      border: 1px solid #e5e5e5;
    }

    .view-option {
      padding: 10px 20px;
      background: transparent;
      border: none;
      font-size: 12px;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      cursor: pointer;
      transition: all 0.3s ease;
      color: #6b6b6b;
    }

    .view-option.active {
      background: #000000;
      color: #ffffff;
    }

    .view-option:hover:not(.active) {
      background: #ebebeb;
    }

    /* Accessibility */
    .bike-card:focus-visible {
      outline: 2px solid #000000;
      outline-offset: 4px;
    }

    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }

    /* Print Styles */
    @media print {
      .view-controls {
        display: none;
      }

      .bikes-container {
        display: table;
        width: 100%;
      }

      .bike-card {
        display: table-cell;
        break-inside: avoid;
      }
    }
  </style>
