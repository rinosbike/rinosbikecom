          container.style.width = '100%';
          document.querySelectorAll('.bike-card').forEach(card => {
            card.style.display = 'table-cell';
            card.style.width = 'auto';
          });
        } else {
          container.style.display = 'grid';
          document.querySelectorAll('.bike-card').forEach(card => {
            card.style.display = 'block';
          });
        }
      });
    });

    // Keyboard navigation
