<div class="video-text-feature" 
     data-layout="{{ section.settings.layout }}"
     style="
       background-color: {{ section.settings.background_color }};
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
     ">
  <div class="video-text-container" 
       style="max-width: {{ section.settings.container_width }}px; margin: 0 auto; padding: 0 {{ section.settings.container_padding }}px;">
    
    <div class="video-text-wrapper layout-{{ section.settings.layout }}" 
         style="
           display: flex;
           flex-direction: {% if section.settings.layout == 'left' %}row{% elsif section.settings.layout == 'right' %}row-reverse{% elsif section.settings.layout == 'top' %}column{% else %}column-reverse{% endif %};
           align-items: {{ section.settings.vertical_alignment }};
           gap: {{ section.settings.gap }}px;
         ">
      
      <!-- Video Side -->
      <div class="video-side" 
           style="
             flex: 0 0 {{ section.settings.video_width_percent }}%;
             {% if section.settings.layout == 'left' or section.settings.layout == 'right' %}
               min-width: {{ section.settings.video_min_width }}px;
               max-width: {{ section.settings.video_max_width }}px;
             {% endif %}
           ">
        
        {% if section.settings.video_type == 'youtube' or section.settings.video_type == 'vimeo' %}
          <div class="video-embed-wrapper" 
               style="
                 position: relative;
                 width: 100%;
                 padding-bottom: {{ section.settings.video_aspect_ratio }}%;
                 border-radius: {{ section.settings.video_border_radius }}px;
                 overflow: hidden;
                 {% if section.settings.video_shadow %}box-shadow: 0 4px 20px rgba(0,0,0,0.15);{% endif %}
               ">
            {% if section.settings.video_type == 'youtube' %}
              <iframe 
                src="https://www.youtube.com/embed/{{ section.settings.youtube_id }}?rel=0&modestbranding=1&playsinline=1{% if section.settings.autoplay %}&autoplay=1&mute=1{% endif %}{% if section.settings.loop %}&loop=1&playlist={{ section.settings.youtube_id }}{% endif %}{% if section.settings.hide_controls %}&controls=0{% endif %}"
                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
              </iframe>
            {% elsif section.settings.video_type == 'vimeo' %}
              <iframe 
                src="https://player.vimeo.com/video/{{ section.settings.vimeo_id }}?title=0&byline=0&portrait=0{% if section.settings.autoplay %}&autoplay=1&muted=1{% endif %}{% if section.settings.loop %}&loop=1{% endif %}"
                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
                allow="autoplay; fullscreen; picture-in-picture"
                allowfullscreen>
              </iframe>
            {% endif %}
          </div>
        {% elsif section.settings.video_file != blank %}
          <div class="video-file-wrapper" 
               style="
                 border-radius: {{ section.settings.video_border_radius }}px;
                 overflow: hidden;
                 {% if section.settings.video_shadow %}box-shadow: 0 4px 20px rgba(0,0,0,0.15);{% endif %}
               ">
            <video 
              {% if section.settings.autoplay %}autoplay{% endif %}
              {% if section.settings.loop %}loop{% endif %}
              {% if section.settings.muted %}muted{% endif %}
              {% if section.settings.controls %}controls{% endif %}
              playsinline
              style="width: 100%; height: auto; display: block;">
              <source src="{{ section.settings.video_file }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          </div>
        {% else %}
          <div class="video-placeholder" 
               style="
                 aspect-ratio: 9/16;
                 background: #f0f0f0;
                 display: flex;
                 align-items: center;
                 justify-content: center;
                 border-radius: {{ section.settings.video_border_radius }}px;
                 border: 2px dashed #ccc;
               ">
            <p style="color: #999; text-align: center; padding: 20px;">Add video in section settings</p>
          </div>
        {% endif %}
      </div>
      
      <!-- Text Side -->
      <div class="text-side" 
           style="
             flex: 1;
             {% if section.settings.text_alignment == 'left' %}text-align: left;{% elsif section.settings.text_alignment == 'center' %}text-align: center;{% else %}text-align: right;{% endif %}
           ">
        
        {% if section.settings.eyebrow_text != blank %}
          <p class="eyebrow" 
             style="
               font-size: {{ section.settings.eyebrow_size }}px;
               color: {{ section.settings.eyebrow_color }};
               font-weight: {{ section.settings.eyebrow_weight }};
               text-transform: {{ section.settings.eyebrow_transform }};
               letter-spacing: {{ section.settings.eyebrow_spacing }}px;
               margin-bottom: {{ section.settings.eyebrow_margin }}px;
             ">
            {{ section.settings.eyebrow_text }}
          </p>
        {% endif %}
        
        {% if section.settings.heading != blank %}
          <{{ section.settings.heading_tag }} class="heading" 
             style="
               font-size: {{ section.settings.heading_size }}px;
               color: {{ section.settings.heading_color }};
               font-weight: {{ section.settings.heading_weight }};
               line-height: {{ section.settings.heading_line_height }};
               margin-bottom: {{ section.settings.heading_margin }}px;
             ">
            {{ section.settings.heading }}
          </{{ section.settings.heading_tag }}>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <div class="description" 
               style="
                 font-size: {{ section.settings.description_size }}px;
                 color: {{ section.settings.description_color }};
                 line-height: {{ section.settings.description_line_height }};
                 margin-bottom: {{ section.settings.description_margin }}px;
               ">
            {{ section.settings.description }}
          </div>
        {% endif %}
        
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" 
             class="button" 
             style="
               display: inline-block;
               padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
               background-color: {{ section.settings.button_bg_color }};
               color: {{ section.settings.button_text_color }};
               font-size: {{ section.settings.button_font_size }}px;
               font-weight: {{ section.settings.button_font_weight }};
               text-decoration: none;
               border-radius: {{ section.settings.button_border_radius }}px;
               border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
               transition: all 0.3s ease;
             "
             onmouseover="this.style.backgroundColor='{{ section.settings.button_hover_bg }}'; this.style.color='{{ section.settings.button_hover_text }}';"
             onmouseout="this.style.backgroundColor='{{ section.settings.button_bg_color }}'; this.style.color='{{ section.settings.button_text_color }}';">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
      
    </div>
  </div>
</div>

<style>
  .video-text-feature {
    width: 100%;
  }
  
  @media (max-width: {{ section.settings.mobile_breakpoint }}px) {
    .video-text-wrapper {
      flex-direction: column !important;
    }
    
    .video-side {
      flex: 0 0 100% !important;
      max-width: 100% !important;
      margin-bottom: {{ section.settings.mobile_gap }}px !important;
    }
    
    .text-side {
      text-align: {{ section.settings.mobile_text_alignment }} !important;
    }
    
    .heading {
      font-size: {{ section.settings.mobile_heading_size }}px !important;
    }
    
    .description {
      font-size: {{ section.settings.mobile_description_size }}px !important;
    }
  }
</style>

