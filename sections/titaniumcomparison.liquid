{% schema %}
{
  "name": "RINOS Titanium Comparison",
  "settings": [],
  "presets": [
    {
      "name": "Titanium Bike Comparison",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="table-wrapper">
  <table class="comparison-table">
    <thead>
      <tr>
        <th></th>
        <th>
          <img src="https://i.goopics.net/52yeje.png" alt="Atlas 1">
          <div class="bike-title">{{ "Atlas 1" }}</div>
        </th>
        <th class="highlight-column">
          <img src="https://i.goopics.net/52yeje.png" alt="Atlas 3">
          <div class="bike-title" style="color:#F04A00;">{{ "Atlas 3" }}</div>
        </th>
        <th>
          <img src="https://i.goopics.net/52yeje.png" alt="Atlas 5">
          <div class="bike-title">{{ "Atlas 5" }}</div>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{{ "Frame Material" }}</td>
        <td>{{ "Titanium" }}</td>
        <td class="highlight-column">{{ "Titanium" }}</td>
        <td>{{ "Titanium" }}</td>
      </tr>
      <tr>
        <td>{{ "Fork" }}</td>
        <td>{{ "Toray T800 Carbon" }}</td>
        <td class="highlight-column">{{ "Toray T800 Carbon" }}</td>
        <td>{{ "Toray T800 Carbon" }}</td>
      </tr>
      <tr>
        <td>{{ "Groupset" }}</td>
        <td>{{ "Shimano GRX 400 (20-speed)" }}</td>
        <td class="highlight-column">{{ "Shimano GRX 600 (22-speed)" }}</td>
        <td>{{ "Shimano GRX 820 (24-speed)" }}</td>
      </tr>
      <tr>
        <td>{{ "Brakes" }}</td>
        <td>{{ "Shimano GRX 400 Hydraulic" }}</td>
        <td class="highlight-column">{{ "Shimano GRX 600 Hydraulic" }}</td>
        <td>{{ "Shimano GRX 820 Hydraulic" }}</td>
      </tr>
      <tr>
        <td>{{ "Cassette" }}</td>
        <td>{{ "Shimano CS-HG500-10 (11-34T)" }}</td>
        <td class="highlight-column">{{ "Shimano CS-HG500-10 (11-34T)" }}</td>
        <td>{{ "Shimano CS-R8100 (11-34T)" }}</td>
      </tr>
      <tr>
        <td>{{ "Crankset" }}</td>
        <td>{{ "Shimano GRX FC-RX600 (46-30T)" }}</td>
        <td class="highlight-column">{{ "Shimano GRX FC-RX600 (46-30T)" }}</td>
        <td>{{ "Shimano GRX FC-RX820 (48-31T)" }}</td>
      </tr>
      <tr>
        <td>{{ "Wheelset" }}</td>
        <td>{{ "Rinos 28H, 38mm Depth" }}</td>
        <td class="highlight-column">{{ "Rinos 28H, 38mm Depth" }}</td>
        <td>{{ "Rinos 28H, 38mm Depth" }}</td>
      </tr>
      <tr>
        <td>{{ "Tire Clearance" }}</td>
        <td>{{ "700×40C" }}</td>
        <td class="highlight-column">{{ "700×40C" }}</td>
        <td>{{ "700×40C" }}</td>
      </tr>
      <tr>
        <td>{{ "Seatpost" }}</td>
        <td>{{ "Rinos Carbon 31.6 × 400 mm" }}</td>
        <td class="highlight-column">{{ "Rinos Carbon 31.6 × 400 mm" }}</td>
        <td>{{ "Rinos Carbon 31.6 × 400 mm" }}</td>
      </tr>
      <tr>
        <td>{{ "Handlebar" }}</td>
        <td>{{ "Rinos Carbon 420/440 mm" }}</td>
        <td class="highlight-column">{{ "Rinos Carbon 420/440 mm" }}</td>
        <td>{{ "Rinos Carbon 420/440 mm" }}</td>
      </tr>
      <tr>
        <td>{{ "Weight" }}</td>
        <td>{{ "~10.3 kg" }}</td>
        <td class="highlight-column">{{ "~10.3 kg" }}</td>
        <td>{{ "~10.3 kg" }}</td>
      </tr>
    </tbody>
  </table>
</section>

<style>
  .comparison-table {
    width: 100%;
    border-collapse: collapse;
    font-family: 'IBM Plex Sans', sans-serif;
  }
  .comparison-table th, .comparison-table td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid #4b4b4b;
  }
  .highlight-column {
    border-right: 2px solid #F04A00;
    border-left: 2px solid #F04A00;
  }
  .comparison-table img {
    max-width: 175px;
  }
  .table-wrapper {
    max-width: 1200px;
    margin: auto;
    overflow-x: auto;
  }
  .bike-title {
    font-weight: bold;
    font-size: 1.2em;
  }
</style>
