{% schema %}
{
  "name": "RINOS Titanium Comparison",
  "settings": [],
  "presets": [
    {
      "name": "Titanium Bike Comparison",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="table-wrapper">
  <table class="comparison-table">
    <thead>
      <tr>
        <th></th>
        <th>
          <img src="https://i.goopics.net/52yeje.png" alt="Atlas 1">
          <div class="bike-title">{{ "Atlas 1" }}</div>
        </th>
        <th class="highlight-column">
          <img src="https://i.goopics.net/52yeje.png" alt="Atlas 2">
          <div class="bike-title" style="color:#F04A00;">{{ "Atlas 2" }}</div>
        </th>
        <th>
          <img src="https://i.goopics.net/52yeje.png" alt="Atlas 3">
          <div class="bike-title">{{ "Atlas 3" }}</div>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{{ "Frame Material" }}</td>
        <td>{{ "Titanium (Grade 9)" }}</td>
        <td class="highlight-column">{{ "Titanium (Aerospace Grade)" }}</td>
        <td>{{ "Titanium (Grade 9 Butted)" }}</td>
      </tr>
      <tr>
        <td>{{ "Weight" }}</td>
        <td>{{ "10.2 kg" }}</td>
        <td class="highlight-column">{{ "9.8 kg" }}</td>
        <td>{{ "10.5 kg" }}</td>
      </tr>
      <tr>
        <td>{{ "Fork" }}</td>
        <td>{{ "Carbon Fiber" }}</td>
        <td class="highlight-column">{{ "Full Carbon (Toray T800)" }}</td>
        <td>{{ "Carbon Fiber" }}</td>
      </tr>
      <tr>
        <td>{{ "Groupset" }}</td>
        <td>{{ "Shimano GRX 400" }}</td>
        <td class="highlight-column">{{ "Shimano GRX 600" }}</td>
        <td>{{ "Shimano GRX 820" }}</td>
      </tr>
      <tr>
        <td>{{ "Brakes" }}</td>
        <td>{{ "Hydraulic Disc" }}</td>
        <td class="highlight-column">{{ "Hydraulic Disc" }}</td>
        <td>{{ "Hydraulic Disc" }}</td>
      </tr>
      <tr>
        <td>{{ "Max Tire Clearance" }}</td>
        <td>{{ "700x45C" }}</td>
        <td class="highlight-column">{{ "700x50C" }}</td>
        <td>{{ "700x47C" }}</td>
      </tr>
      <tr>
        <td>{{ "Handlebar" }}</td>
        <td>{{ "Aluminum, 420mm" }}</td>
        <td class="highlight-column">{{ "Carbon, 440mm" }}</td>
        <td>{{ "Aluminum, 420mm" }}</td>
      </tr>
      <tr>
        <td>{{ "Seatpost" }}</td>
        <td>{{ "Aluminum" }}</td>
        <td class="highlight-column">{{ "Carbon" }}</td>
        <td>{{ "Aluminum" }}</td>
      </tr>
      <tr>
        <td>{{ "Warranty" }}</td>
        <td>{{ "5 Years" }}</td>
        <td class="highlight-column">{{ "Lifetime" }}</td>
        <td>{{ "5 Years" }}</td>
      </tr>
    </tbody>
  </table>
</section>

<style>
  .comparison-table {
    width: 100%;
    border-collapse: collapse;
    font-family: 'IBM Plex Sans', sans-serif;
  }
  .comparison-table th, .comparison-table td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid #4b4b4b;
  }
  .highlight-column {
    border-right: 2px solid #F04A00;
    border-left: 2px solid #F04A00;
  }
  .comparison-table img {
    max-width: 175px;
  }
  .table-wrapper {
    max-width: 1200px;
    margin: auto;
    overflow-x: auto;
  }
  .bike-title {
    font-weight: bold;
    font-size: 1.2em;
  }
</style>
