<script>
  /**
   * Show/hide the correct group of bikes based on user selection
   */
  function changeBikeGroup(selectedGroup) {
    // Hide the default content
    document.getElementById('content-default').style.display = 'none';

    // Hide all group-content sections
    const groupContents = document.querySelectorAll('.group-content');
    groupContents.forEach(section => {
      section.style.display = 'none';
    });

    // Show the selected group if it exists
    if (selectedGroup) {
      const groupId = 'content-' + selectedGroup;
      const selectedSection = document.getElementById(groupId);
      if (selectedSection) {
        selectedSection.style.display = 'block';
      }
    }
  }

  /**
   * Download PDF function (demo logic)
   */
  function downloadPDF(groupName, language) {
    if (!language) return; // If user hasn't chosen a language, do nothing
    if (!groupName) {
      alert('Please select a group first.');
      return;
    }
    // Example URL: /pdfs/sandman135-en.pdf
    window.location.href = `/pdfs/${groupName}-${language}.pdf`;
  }
</script>

