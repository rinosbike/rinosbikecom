      flex-direction: column;
      gap: 1.5rem;
    }

    /* Bike Image */
    .group-image {
      width: 100%;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    /* Download / Verify panel */
