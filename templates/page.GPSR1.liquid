      </div>
  </div>

  <script>
      function changeBike(bike) {
          // Hide all content blocks
          document.getElementById('content-default').style.display = 'none';
          document.querySelectorAll('[id^="content-"]').forEach(function(content) {
              content.style.display = 'none';
          });

          // Show the selected bike's content block
          if (bike) {
              const contentId = 'content-' + bike;
              const selectedContent = document.getElementById(contentId);
              if (selectedContent) {
                  selectedContent.style.display = 'block';
              }
          }
      }
  </script>

  <style>
      .gpsr-container {
          padding: 20px;
          font-family: Arial, sans-serif;
      }
      .bike-selector {
          margin: 20px 0;
      }
      .bike-selector label {
          margin-right: 10px;
          font-size: 16px;
      }
      .bike-selector select {
          padding: 10px;
          border: 1px solid #ccc;
          border-radius: 5px;
          background-color: #f9f9f9;
          color: #333;
      }
      .gpsr-container h1 {
          font-size: 24px;
          margin-bottom: 10px;
      }
      .gpsr-container p {
          font-size: 16px;
          line-height: 1.5;
      }
      .gpsr-container ul {
          margin: 10px 0;
          padding-left: 20px;
      }
      .gpsr-container ul li {
          font-size: 16px;
          line-height: 1.5;
      }
  </style>
{% endif %}
