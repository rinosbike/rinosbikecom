{% if template == 'page.gpsr' %}
  <div class="gpsr-container">
      <header class="gpsr-header">
          <div class="contact-info">
              <h2>Contact Information</h2>
              <p><strong>Responsible Person:</strong> Rinos Handels GmbH</p>
              <p><strong>Address:</strong> Goethestr. 11E, 15234 Frankfurt (Oder), Germany</p>
              <p><strong>Phone:</strong> +49 163 370 3902</p>
              <p><strong>Email:</strong> info@rinosbike.eu</p>
          </div>
          <h1>GPSR Compliance Information</h1>
          <p>Select your bike model to view details and download compliance information in your preferred language.</p>
      </header>

      <!-- Bike Selector Dropdown -->
      <div class="bike-selector">
          <label for="bike-switcher">Select Your Bike Model:</label>
          <div class="custom-select-wrapper">
              <select id="bike-switcher" onchange="changeBike(this.value)">
                  <option value="" selected disabled>Choose a bike model</option>
                  <option value="sandman1">Sandman 1 - Good and Affordable</option>
                  <option value="sandman3">Sandman 3 - The All-Rounder</option>
                  <option value="sandman4">Sandman 4 - Our Bestseller</option>
                  <option value="sandman5">Sandman 5 - Ultimate Performance</option>
                  <option value="sandman6">Sandman 6 - The Best of Its Kind</option>
                  <option value="sandman7">Sandman 7 - Top of the Line</option>
                  <option value="odin1">Odin 1 - Good and Affordable</option>
                  <option value="odin3">Odin 3 - The All-Rounder</option>
                  <option value="odin4">Odin 4 - Our Newcomer</option>
                  <option value="odin5">Odin 5 - Ultimate Performance</option>
                  <option value="gaia2">Gaia 2 - Cost-effective</option>
                  <option value="gaia4">Gaia 4 - The Professional's Choice</option>
              </select>
          </div>
      </div>

      <!-- Default Content -->
      <div id="content-default">
          <p>Please select a bike model to view the compliance information.</p>
      </div>

      <!-- Example Content for Bike Details -->
      <div id="content-sandman1" class="bike-details" style="display: none;">
          <div class="bike-details-grid">
              <div class="bike-image">
                  <img src="/images/sandman1.jpg" alt="Sandman 1">
              </div>
              <div class="bike-info">
                  <h2>Sandman 1 - Compliance Information</h2>
                  <ul>
                      <li><strong>Weight:</strong> 9.8kg</li>
                      <li><strong>Gear:</strong> Shimano SORA</li>
                      <li><strong>Gears:</strong> 18</li>
                      <li><strong>Frame:</strong> TORAY T800 Carbon</li>
                      <li><strong>Brakes:</strong> Mechanical</li>
                      <li><strong>Wheel Size:</strong> 28 inches</li>
                      <li><strong>Rims:</strong> Aluminum</li>
                  </ul>
              </div>
              <div class="bike-download">
                  <label for="language-switcher">Download Compliance PDF:</label>
                  <select id="language-switcher" onchange="downloadPDF(this.value)">
                      <option value="" selected disabled>Select Language</option>
                      <option value="en">English</option>
                      <option value="de">German</option>
                      <option value="fr">French</option>
                      <option value="es">Spanish</option>
                      <option value="it">Italian</option>
                      <option value="nl">Dutch</option>
                      <option value="pl">Polish</option>
                      <option value="pt">Portuguese</option>
                      <option value="sv">Swedish</option>
                      <option value="da">Danish</option>
                      <option value="fi">Finnish</option>
                      <option value="cs">Czech</option>
                      <option value="hu">Hungarian</option>
                  </select>
              </div>
          </div>
      </div>
  </div>

  <script>
      function changeBike(bike) {
          document.getElementById('content-default').style.display = 'none';
          document.querySelectorAll('.bike-details').forEach(content => content.style.display = 'none');
          const contentId = 'content-' + bike;
          const selectedContent = document.getElementById(contentId);
          if (selectedContent) {
              selectedContent.style.display = 'grid';
          }
      }

      function downloadPDF(language) {
          if (language) {
              const bikeName = document.querySelector('#bike-switcher').value;
              if (bikeName) {
                  window.location.href = `/pdfs/${bikeName}-${language}.pdf`;
              } else {
                  alert('Please select a bike model first.');
              }
          }
      }
  </script>

  <style>
      .gpsr-container {
          max-width: 1000px;
          margin: 0 auto;
          padding: 40px;
          font-family: Arial, sans-serif;
          text-align: center;
      }

      .bike-details-grid {
          display: grid;
          grid-template-columns: 1fr 2fr 1fr;
          gap: 20px;
          align-items: center;
          margin-top: 30px;
      }

      .bike-image img {
          width: 100%;
          border-radius: 8px;
      }

      .bike-info ul {
          list-style: none;
          padding: 0;
      }

      .bike-info ul li {
          margin-bottom: 10px;
          font-size: 16px;
          color: #444;
      }

      .bike-download select {
          padding: 10px;
          font-size: 16px;
          border: 1px solid #ccc;
          border-radius: 6px;
          width: 100%;
      }
  </style>
{% endif %}
