<script>
  /**
   * Shows the chosen bike group, hides all others.
   */
  function changeBikeGroup(selectedGroup) {
    // Hide default text
    document.getElementById('content-default').style.display = 'none';

    // Hide every group-content
    document.querySelectorAll('.group-content').forEach(section => {
      section.style.display = 'none';
    });

    // Show the selected group
    if (selectedGroup) {
      const groupId = 'content-' + selectedGroup;
      const selectedSection = document.getElementById(groupId);
      if (selectedSection) {
        selectedSection.style.display = 'block';
      }
    }
  }

  /**
   * Simulate "Downloading" or verifying compliance PDF in the chosen language.
   * Adjust path or logic as necessary.
   */
  function downloadPDF(groupName, language) {
    if (!language) return;  // If no language selected, do nothing
    if (!groupName) {
      alert('Please select a bike group first.');
      return;
    }
    // Example PDF path: /pdfs/sandman135-en.pdf
    const pdfUrl = `/pdfs/${groupName}-${language}.pdf`;
    window.location.href = pdfUrl;
  }
</script>

