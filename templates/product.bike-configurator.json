{
  "sections": {
    "main": {
      "type": "main-product-configurator",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {}
        },
        "price": {
          "type": "price",
          "settings": {}
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": false
          }
        },
        "delivery_info": {
          "type": "delivery_info",
          "settings": {}
        }
      },
      "block_order": [
        "title",
        "price",
        "variant_picker",
        "buy_buttons",
        "delivery_info"
      ],
      "settings": {
        "enable_sticky_info": false,
        "color_scheme": "background-1",
        "media_size": "large",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "single",
        "media_position": "left",
        "image_zoom": "click",
        "mobile_thumbnails": "hide",
        "hide_variants": false,
        "enable_video_looping": false,
        "padding_top": 0,
        "padding_bottom": 0
      }
    },
    "product_features": {
      "type": "bike-parts-highlight-1",
      "settings": {
        "tire_size_text": "tire size",
        "gear_shifter_text": "gear shifter", 
        "weight_text": "weight",
        "material_text": "frame material",
        "tire_size_variabel_text": "{{ product.metafields.custom.tire_size_highlight.value }}",
        "gear_shifter_variabel_text": "{{ product.metafields.custom.gear_shifter_highlight.value }}",
        "weight_variabel_text": "{{ product.metafields.custom.weight_highlight.value }}",
        "material_variabel_text": "{{ product.metafields.custom.material_highlight.value }}"
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "Complete your setup",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "background-1",
        "image_ratio": "adapt",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "main",
    "product_features", 
    "related-products"
  ]
} 