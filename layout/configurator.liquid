<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <!-- Copy all the head content from your theme.liquid but remove unnecessary parts -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ page_title }} – {{ shop.name }}</title>
    
    <!-- Copy your CSS variables and base styles from theme.liquid -->
    {{ 'base.css' | asset_url | stylesheet_tag }}
    
    <style>
      /* Minimal configurator styles */
      body { margin: 0; min-height: 100vh; }
      .configurator-back-button {
        position: fixed;
        top: 20px;
        left: 20px;
        z-index: 1000;
        background: rgba(0, 0, 0, 0.8);
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        text-decoration: none;
      }
    </style>
  </head>
  
  <body>
    <!-- Back button -->
    <a href="/" class="configurator-back-button">← Zurück zum Shop</a>
    
    <!-- Cart drawer if needed -->
    {%- if settings.cart_type == 'drawer' -%}
      {%- render 'cart-drawer' -%}
    {%- endif -%}
    
    <main id="MainContent">
      {{ content_for_layout }}
    </main>
    
    <!-- Essential scripts -->
    <script src="{{ 'global.js' | asset_url }}"></script>
  </body>
</html>
